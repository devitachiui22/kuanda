
    <style>
        /* =========================================
           SASS/TAILWIND ADVANCED CONFIG
           ========================================= */
        :root {
            --bg-body: #fdfdfe;
            --card-bg: #ffffff;
            --accent: #4f46e5;
            --uno-red: linear-gradient(180deg, #ff4b2b, #ff416c);
            --uno-blue: linear-gradient(180deg, #00d2ff, #3a7bd5);
            --uno-green: linear-gradient(180deg, #11998e, #38ef7d);
            --uno-gold: linear-gradient(180deg, #f2994a, #f2c94c);
            --shadow-uno: 0 10px 25px -5px rgba(0, 0, 0, 0.05), 0 8px 10px -6px rgba(0, 0, 0, 0.05);
            --shadow-hover: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: #1e293b;
            margin: 0;
            padding: 0;
            overflow-x: hidden;

            /* CONFIGURAÇÃO DE FUNDO: O EQUILÍBRIO PERFEITO */
            background-image: 
                /* O segredo está aqui: 0.78 de opacidade para a imagem aparecer com força, mas manter o brilho light */
                linear-gradient(rgba(241, 245, 249, 0.78), rgba(241, 245, 249, 0.82)), 
                url('https://www.rockstargames.com/VI/_next/image?url=%2FVI%2F_next%2Fstatic%2Fmedia%2FJason_and_Lucia_01_With_Logos_landscape.8596f77a.jpg&w=1920&q=75'); 
            
            background-attachment: fixed; /* Mantém a imagem estática enquanto os cards deslizam */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        /* AJUSTE DOS CARDS PARA SE DESTACAREM NO FUNDO MAIS VISÍVEL */
        .uno-card, .modular-card {
            /* Aumentamos o desfoque (blur) para que o fundo não "brigue" com o texto do card */
            backdrop-filter: blur(20px) saturate(160%); 
            background: rgba(255, 255, 255, 0.88) !important;
            border: 1px solid rgba(255, 255, 255, 1) !important;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        /* Removendo qualquer sublinhado residual de links na página toda */
        a {
            text-decoration: none !important;
        }

        /* Espaçamento para Navbar Injetada (3cm) */
        .main-wrapper {
            margin-top: 115px; 
            padding: 0 5% 60px 5%;
            max-width: 1600px;
            margin-left: auto;
            margin-right: auto;
        }

        /* HEADER */
        .manager-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        .page-title {
            font-weight: 800;
            font-size: 1.8rem;
            letter-spacing: -0.5px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-title i { color: var(--accent); }

        .count-badge {
            background: #f1f5f9;
            color: #64748b;
            padding: 4px 12px;
            border-radius: 10px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .btn-add {
            background: #0f172a;
            color: white;
            padding: 12px 24px;
            border-radius: 12px;
            font-weight: 700;
            text-decoration: none;
            font-size: 0.9rem;
            transition: 0.3s;
            box-shadow: 0 4px 12px rgba(15, 23, 42, 0.15);
        }
        .btn-add:hover { transform: scale(1.03); background: #1e293b; color: white; }

        /* GRID MATRIX - DESKTOP (5 Colunas para cards menores) */
        .game-matrix {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 20px;
            margin-bottom: 40px;
        }

        /* UNO CARD DESIGN (MINIATURIZADO) */
        .uno-card {
            background: var(--card-bg);
            border-radius: 20px;
            position: relative;
            border: 6px solid white;
            box-shadow: var(--shadow-uno);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            aspect-ratio: 1 / 1.4;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        /* Gradiente Lateral */
        .uno-card::before {
            content: '';
            position: absolute;
            left: 0; top: 0; bottom: 0; width: 8px;
            background: var(--uno-blue);
            z-index: 10;
        }

        .uno-card:hover {
            transform: translateY(-10px) rotate(1deg);
            box-shadow: var(--shadow-hover);
            border-color: #f8fafc;
        }

        .card-img {
            height: 55%;
            background: #f8fafc;
            position: relative;
            overflow: hidden;
        }

        .card-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

        .card-info {
            padding: 12px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-info h3 {
            font-size: 0.95rem;
            font-weight: 700;
            margin: 0;
            color: #0f172a;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.3;
        }

        .card-platform {
            font-size: 0.65rem;
            text-transform: uppercase;
            font-weight: 800;
            color: #94a3b8;
            letter-spacing: 0.5px;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 8px;
            border-top: 1px solid #f1f5f9;
        }

        .price {
            font-weight: 800;
            font-size: 0.9rem;
            color: var(--accent);
        }

        /* ACTIONS */
        .card-actions {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            flex-direction: column;
            gap: 6px;
            opacity: 0;
            transform: translateX(10px);
            transition: 0.3s;
            z-index: 20;
        }

        .uno-card:hover .card-actions { opacity: 1; transform: translateX(0); }

        .btn-action {
            width: 32px;
            height: 32px;
            background: white;
            border: none;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0f172a;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            cursor: pointer;
            text-decoration: none;
            font-size: 0.8rem;
        }
        .btn-action:hover { background: var(--accent); color: white; }
        .btn-action.btn-del:hover { background: #ef4444; }

        /* PAGINAÇÃO */
        .pagination-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin-top: 40px;
        }
        .page-btn {
            padding: 8px 16px;
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            background: white;
            font-weight: 600;
            cursor: pointer;
            transition: 0.2s;
        }
        .page-btn:hover:not(:disabled) { background: #f8fafc; border-color: var(--accent); }
        .page-btn:disabled { opacity: 0.5; cursor: not-allowed; }
        .page-info { font-weight: 600; font-size: 0.9rem; color: #64748b; }

        /* MOBILE OVERRIDES (MATRIZ 3x3) */
        @media (max-width: 768px) {
            .main-wrapper { padding: 0 15px 40px 15px; margin-top: 100px; }
            .game-matrix {
                grid-template-columns: repeat(3, 1fr); /* 3x3 */
                gap: 10px;
            }
            .uno-card { border-width: 4px; border-radius: 12px; }
            .card-info h3 { font-size: 0.75rem; }
            .card-platform { font-size: 0.55rem; }
            .price { font-size: 0.75rem; }
            .card-info { padding: 8px; }
            .btn-action { width: 28px; height: 28px; font-size: 0.7rem; }
            .page-title { font-size: 1.4rem; }
        }

        /* Status Dot */
        .st-dot {
            width: 6px; height: 6px; border-radius: 50%; display: inline-block;
        }
        .st-active { background: #10b981; box-shadow: 0 0 8px #10b981; }
        .st-inactive { background: #f43f5e; box-shadow: 0 0 8px #f43f5e; }

        /* Animação Stagger */
        .fade-in { animation: fadeInUp 0.5s ease forwards; opacity: 0; }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>

<div class="main-wrapper">
    
    <!-- HEADER -->
    <header class="manager-header">
        <h1 class="page-title">
            <i class="fa-solid fa-layer-group"></i> Jogos
            <span class="count-badge"><%= jogos.length %></span>
        </h1>
        <a href="/admin/jogos/novo" class="btn-add">
            <i class="fa-solid fa-plus"></i> <span class="d-none d-sm-inline">Novo</span>
        </a>
    </header>

    <!-- MATRIX 4x4 (Desktop) / 3x3 (Mobile) -->
    <div class="game-matrix" id="gameMatrix">
        
        <% if (jogos.length === 0) { %>
            <div style="grid-column: 1/-1; text-align: center; padding: 100px 0;">
                <i class="fa-solid fa-ghost fa-3x" style="color: #e2e8f0; margin-bottom: 20px;"></i>
                <h4 class="text-muted">Nenhum jogo por aqui...</h4>
            </div>
        <% } else { %>
            
            <% jogos.forEach((jogo, index) => { %>
                <article class="uno-card fade-in game-item" 
                         style="animation-delay: <%= (index % 10) * 0.05 %>s;"
                         data-platform="<%= jogo.plataforma.toLowerCase() %>">
                    
                    <div class="card-actions">
                        <a href="/admin/jogos/<%= jogo.id %>/editar" class="btn-action" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <form action="/admin/jogos/<%= jogo.id %>?_method=DELETE" method="POST" class="m-0 delete-form">
                            <button type="submit" class="btn-action btn-del" title="Eliminar">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </div>

                    <div class="card-img">
                        <% if (jogo.capa) { %>
                            <img src="/uploads/games/<%= jogo.capa %>" alt="<%= jogo.titulo %>" onerror="this.src='https://via.placeholder.com/150x200?text=GAME'">
                        <% } else { %>
                            <div style="height:100%; display:flex; align-items:center; justify-content:center;">
                                <i class="fa-solid fa-image fa-2x" style="color:#e2e8f0"></i>
                            </div>
                        <% } %>
                    </div>

                    <div class="card-info">
                        <div>
                            <span class="card-platform"><%= jogo.plataforma %></span>
                            <h3><%= jogo.titulo %></h3>
                        </div>

                        <div class="card-footer">
                            <span class="price">
                                <%= Number(jogo.preco) === 0 ? 'GRÁTIS' : Number(jogo.preco).toLocaleString('pt-AO') %>
                            </span>
                            <span class="st-dot <%= jogo.ativo ? 'st-active' : 'st-inactive' %>"></span>
                        </div>
                    </div>
                </article>
            <% }) %>

        <% } %>

    </div>

    <!-- PAGINAÇÃO -->
    <% if (jogos.length > 10) { %>
    <div class="pagination-bar">
        <button class="page-btn" id="prevPage" onclick="changePage(-1)"><i class="fa-solid fa-chevron-left"></i></button>
        <span class="page-info">Página <span id="currentPageDisplay">1</span></span>
        <button class="page-btn" id="nextPage" onclick="changePage(1)"><i class="fa-solid fa-chevron-right"></i></button>
    </div>
    <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    /* =========================================
       LÓGICA DE PAGINAÇÃO FRONT-END
       ========================================= */
    const itemsPerPage = 10;
    let currentPage = 1;
    const items = document.querySelectorAll('.game-item');
    const totalPages = Math.ceil(items.length / itemsPerPage);

    function showPage(page) {
        const start = (page - 1) * itemsPerPage;
        const end = start + itemsPerPage;

        items.forEach((item, index) => {
            if (index >= start && index < end) {
                item.style.display = 'flex';
                // Reinicia animação
                item.style.animation = 'none';
                item.offsetHeight; 
                item.style.animation = null;
            } else {
                item.style.display = 'none';
            }
        });

        document.getElementById('currentPageDisplay').innerText = page;
        document.getElementById('prevPage').disabled = (page === 1);
        document.getElementById('nextPage').disabled = (page === totalPages);
    }

    function changePage(step) {
        currentPage += step;
        if (currentPage < 1) currentPage = 1;
        if (currentPage > totalPages) currentPage = totalPages;
        showPage(currentPage);
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // Inicializar
    if(items.length > 0) showPage(1);

    /* =========================================
       DELETAR & ESTILIZAÇÃO DE CORES UNO
       ========================================= */
    // Cores dinâmicas por plataforma
    items.forEach(item => {
        const plat = item.getAttribute('data-platform');
        if(plat.includes('ps')) item.style.setProperty('--uno-blue', 'var(--uno-red)');
        if(plat.includes('xbox')) item.style.setProperty('--uno-blue', 'var(--uno-green)');
        if(plat.includes('nintendo')) item.style.setProperty('--uno-blue', 'var(--uno-gold)');
    });

    // Confirmação SweetAlert
    document.querySelectorAll('.delete-form').forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Eliminar Jogo?',
                text: "Esta ação é irreversível!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Sim, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) this.submit();
            });
        });
    });
</script>
