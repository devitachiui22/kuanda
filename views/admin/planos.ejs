<!DOCTYPE html>
<html lang="pt-AO">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Fonte Premium -->
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --ks-primary: #E11D48;
            --ks-primary-soft: #FFE4E6;
            --ks-dark: #0F172A;
            --ks-gray: #64748B;
            --ks-bg: #F8FAFC;
            --ks-card-bg: #FFFFFF;
            --ks-border: #E2E8F0;
            --ks-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
            --ks-radius: 16px;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--ks-bg);
            color: var(--ks-dark);
        }

        /* 1. HEADER */
        .page-header {
            display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; flex-wrap: wrap; gap: 20px;
        }
        .page-title {
            font-weight: 800; font-size: 1.8rem; margin: 0; color: var(--ks-dark); letter-spacing: -0.5px;
        }
        .page-subtitle { font-size: 0.9rem; color: var(--ks-gray); margin-top: 5px; }

        .btn-action {
            padding: 10px 20px; border-radius: 50px; font-weight: 600; text-decoration: none;
            display: inline-flex; align-items: center; gap: 8px; transition: all 0.2s; border: none; cursor: pointer;
        }
        .btn-primary-custom {
            background: var(--ks-dark); color: white; box-shadow: 0 4px 10px rgba(15, 23, 42, 0.2);
        }
        .btn-primary-custom:hover { background: #1E293B; transform: translateY(-2px); color: white; }
        
        .btn-outline-custom {
            background: white; border: 1px solid var(--ks-border); color: var(--ks-gray);
        }
        .btn-outline-custom:hover { background: #F1F5F9; color: var(--ks-dark); }

        /* 2. STATS CARDS */
        .stats-grid {
            display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 20px; margin-bottom: 40px;
        }
        .stat-card {
            background: var(--ks-card-bg); padding: 25px; border-radius: var(--ks-radius);
            box-shadow: var(--ks-shadow); border: 1px solid var(--ks-border);
            display: flex; align-items: center; justify-content: space-between;
        }
        .stat-icon {
            width: 50px; height: 50px; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;
        }
        .stat-info h3 { font-size: 1.8rem; font-weight: 800; margin: 0; line-height: 1; }
        .stat-info span { font-size: 0.8rem; font-weight: 600; text-transform: uppercase; color: var(--ks-gray); letter-spacing: 0.5px; }

        /* Cores Stats */
        .sc-blue .stat-icon { background: #E0F2FE; color: #0284C7; }
        .sc-green .stat-icon { background: #DCFCE7; color: #16A34A; }
        .sc-yellow .stat-icon { background: #FEF3C7; color: #D97706; }
        .sc-purple .stat-icon { background: #F3E8FF; color: #9333EA; }

        /* 3. TABS NAVIGATION */
        .custom-tabs {
            border-bottom: 2px solid var(--ks-border); margin-bottom: 30px; display: flex; gap: 30px;
        }
        .tab-btn {
            background: none; border: none; padding: 15px 0; font-weight: 600; color: var(--ks-gray);
            position: relative; cursor: pointer; transition: 0.2s; font-size: 1rem;
        }
        .tab-btn.active { color: var(--ks-primary); }
        .tab-btn.active::after {
            content: ''; position: absolute; bottom: -2px; left: 0; width: 100%; height: 2px; background: var(--ks-primary);
        }
        .tab-btn:hover { color: var(--ks-dark); }
        
        .badge-pill {
            background: var(--ks-primary); color: white; padding: 2px 8px; border-radius: 10px; font-size: 0.7rem; vertical-align: middle; margin-left: 5px;
        }

        /* 4. PLAN CARDS (TAB 1) */
        .plans-grid {
            display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 25px;
        }
        .plan-item {
            background: var(--ks-card-bg); border-radius: var(--ks-radius); padding: 30px;
            border: 1px solid var(--ks-border); box-shadow: var(--ks-shadow);
            transition: 0.3s; position: relative; overflow: hidden;
        }
        .plan-item:hover { transform: translateY(-5px); border-color: var(--ks-primary); }
        
        .plan-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px; }
        .plan-name { font-size: 1.2rem; font-weight: 800; margin: 0; }
        .plan-badge { font-size: 0.75rem; background: #F1F5F9; padding: 4px 10px; border-radius: 20px; font-weight: 600; }
        
        .plan-price { font-size: 2.5rem; font-weight: 800; color: var(--ks-dark); margin-bottom: 20px; }
        .plan-price small { font-size: 1rem; font-weight: 500; color: var(--ks-gray); }
        
        .plan-features li { margin-bottom: 10px; color: var(--ks-gray); font-size: 0.9rem; display: flex; align-items: center; gap: 10px; }
        .check-icon { color: #10B981; }
        .x-icon { color: #CBD5E1; }

        .plan-actions { display: grid; grid-template-columns: 1fr auto; gap: 10px; margin-top: 25px; }

        /* 5. VENDOR LIST (TAB 2 & 3) */
        .vendor-group { margin-bottom: 40px; }
        .group-header {
            display: flex; align-items: center; gap: 10px; margin-bottom: 20px;
            padding-bottom: 10px; border-bottom: 1px dashed var(--ks-border);
        }
        .group-title { font-weight: 700; font-size: 1.1rem; margin: 0; }
        
        .vendor-table-card {
            background: var(--ks-card-bg); border-radius: var(--ks-radius);
            box-shadow: var(--ks-shadow); overflow: hidden; border: 1px solid var(--ks-border);
        }
        
        .table-custom { width: 100%; border-collapse: collapse; }
        .table-custom th {
            text-align: left; padding: 15px 20px; background: #F8FAFC; color: var(--ks-gray);
            font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px;
        }
        .table-custom td {
            padding: 15px 20px; border-top: 1px solid #F1F5F9; vertical-align: middle;
        }
        .table-custom tr:hover { background: #FCFCFC; }

        /* Avatar Cell */
        .v-cell { display: flex; align-items: center; gap: 15px; }
        .v-avatar { width: 40px; height: 40px; border-radius: 10px; object-fit: cover; background: #eee; }
        .v-placeholder { width: 40px; height: 40px; border-radius: 10px; background: var(--ks-dark); color: white; display: flex; align-items: center; justify-content: center; font-weight: 700; }
        .v-info h6 { margin: 0; font-weight: 700; font-size: 0.95rem; }
        .v-info span { font-size: 0.8rem; color: var(--ks-gray); }

        /* Progress Bar */
        .limit-progress { width: 100px; height: 6px; background: #E2E8F0; border-radius: 10px; overflow: hidden; margin-top: 5px; }
        .limit-fill { height: 100%; border-radius: 10px; }
        .fill-green { background: #10B981; }
        .fill-yellow { background: #F59E0B; }
        .fill-red { background: #EF4444; }

        /* Status Badge */
        .status-dot { width: 8px; height: 8px; border-radius: 50%; display: inline-block; margin-right: 5px; }
        .dot-green { background: #10B981; box-shadow: 0 0 0 4px #DCFCE7; }
        .dot-red { background: #EF4444; box-shadow: 0 0 0 4px #FEE2E2; }

        /* Empty State */
        .empty-state {
            text-align: center; padding: 60px 20px;
            background: white; border-radius: var(--ks-radius); border: 2px dashed #E2E8F0;
        }
        .empty-icon { font-size: 3rem; color: #CBD5E1; margin-bottom: 15px; }

        /* Responsivo */
        @media (max-width: 768px) {
            .stats-grid { grid-template-columns: 1fr 1fr; }
            .plans-grid { grid-template-columns: 1fr; }
            .table-responsive { overflow-x: auto; }
        }
    </style>
</head>
<body>

<div class="container py-4">
    
    <!-- HEADER -->
    <div class="page-header">
        <div>
            <h2 class="page-title">Gestão de Assinaturas</h2>
            <p class="page-subtitle">Configure planos e monitore o uso dos vendedores.</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/admin/migrar-planos" class="btn-action btn-outline-custom">
                <i class="fas fa-sync-alt"></i> Migrar Dados
            </a>
            <a href="/admin/planos/novo" class="btn-action btn-primary-custom">
                <i class="fas fa-plus"></i> Novo Plano
            </a>
        </div>
    </div>

    <!-- STATS CARDS -->
    <div class="stats-grid">
        <div class="stat-card sc-blue">
            <div class="stat-info">
                <h3><%= stats.total_planos || planos.length %></h3>
                <span>Planos Ativos</span>
            </div>
            <div class="stat-icon"><i class="fas fa-layer-group"></i></div>
        </div>
        <div class="stat-card sc-green">
            <div class="stat-info">
                <h3><%= stats.vendedores_ativos || 0 %></h3>
                <span>Lojas Ativas</span>
            </div>
            <div class="stat-icon"><i class="fas fa-store"></i></div>
        </div>
        <div class="stat-card sc-purple">
            <div class="stat-info">
                <h3><%= stats.vendedores_com_plano || 0 %></h3>
                <span>Assinantes</span>
            </div>
            <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
        </div>
        <div class="stat-card sc-yellow">
            <div class="stat-info">
                <h3><%= stats.vendedores_sem_plano || vendedoresSemPlano.length %></h3>
                <span>Pendentes</span>
            </div>
            <div class="stat-icon"><i class="fas fa-exclamation-triangle"></i></div>
        </div>
    </div>

    <!-- TABS NAVIGATION -->
    <div class="custom-tabs">
        <button class="tab-btn active" onclick="switchTab('planos', this)">
            Planos Disponíveis
        </button>
        <button class="tab-btn" onclick="switchTab('vendedores', this)">
            Base de Vendedores
        </button>
        <button class="tab-btn text-danger" onclick="switchTab('sem-plano', this)">
            Sem Plano <% if(vendedoresSemPlano.length > 0) { %><span class="badge-pill"><%= vendedoresSemPlano.length %></span><% } %>
        </button>
    </div>

    <!-- CONTENT AREAS -->
    
    <!-- TAB 1: LISTA DE PLANOS -->
    <div id="tab-planos" class="tab-content">
        <% if (planos.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-box-open empty-icon"></i>
                <h4 class="fw-bold text-muted">Nenhum plano criado</h4>
                <p class="text-muted mb-4">Comece criando planos para monetizar sua plataforma.</p>
                <a href="/admin/planos/novo" class="btn-action btn-primary-custom d-inline-flex">Criar Primeiro Plano</a>
            </div>
        <% } else { %>
            <div class="plans-grid">
                <% planos.forEach(plano => { %>
                    <div class="plan-item">
                        <div class="plan-header">
                            <div>
                                <h4 class="plan-name"><%= plano.nome %></h4>
                                <span class="plan-badge"><%= plano.total_vendedores || 0 %> lojas</span>
                            </div>
                            <!-- Menu ou Icone aqui se quiser -->
                        </div>
                        
                        <div class="plan-price">
                            <% if (plano.preco_mensal > 0) { %>
                                <%= parseFloat(plano.preco_mensal).toLocaleString('pt-AO') %><small> Kz/mês</small>
                            <% } else { %>
                                Grátis
                            <% } %>
                        </div>

                        <ul class="plan-features fa-ul">
                            <li><span class="fa-li"><i class="fas fa-check check-icon"></i></span>Até <%= plano.limite_produtos %> produtos</li>
                            <li class="<%= plano.permite_vip ? '' : 'text-muted' %>">
                                <span class="fa-li"><i class="fas <%= plano.permite_vip ? 'fa-check check-icon' : 'fa-times x-icon' %>"></i></span>
                                Anúncios VIP
                            </li>
                            <li class="<%= plano.permite_destaque ? '' : 'text-muted' %>">
                                <span class="fa-li"><i class="fas <%= plano.permite_destaque ? 'fa-check check-icon' : 'fa-times x-icon' %>"></i></span>
                                Destaque na Home
                            </li>
                        </ul>

                        <div class="plan-actions">
                            <a href="/admin/planos/<%= plano.id %>/editar" class="btn btn-light border fw-bold text-dark w-100 text-center text-decoration-none py-2 rounded-3">Editar</a>
                            <form action="/admin/planos/<%= plano.id %>?_method=DELETE" method="POST" class="m-0">
                                <button type="submit" class="btn btn-light border text-danger w-100 py-2 rounded-3" onclick="return confirm('Excluir este plano?')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <!-- TAB 2: VENDEDORES POR PLANO -->
    <div id="tab-vendedores" class="tab-content" style="display: none;">
        <% if (vendedoresPorPlano.length === 0) { %>
            <div class="empty-state">
                <i class="fas fa-users-slash empty-icon"></i>
                <h4 class="fw-bold text-muted">Nenhum vendedor associado</h4>
            </div>
        <% } else { %>
            <% vendedoresPorPlano.forEach(grupo => { %>
                <% if (grupo.vendedores && grupo.vendedores.length > 0) { %>
                    <div class="vendor-group">
                        <div class="group-header">
                            <i class="fas fa-layer-group text-primary"></i>
                            <h5 class="group-title"><%= grupo.plano_nome %></h5>
                            <span class="badge bg-light text-dark border ms-auto"><%= grupo.vendedores.length %></span>
                        </div>

                        <div class="vendor-table-card">
                            <div class="table-responsive">
                                <table class="table-custom">
                                    <thead>
                                        <tr>
                                            <th>Loja</th>
                                            <th>Responsável</th>
                                            <th>Uso de Limite</th>
                                            <th>Status</th>
                                            <th>Ação</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% grupo.vendedores.forEach(v => { %>
                                            <tr>
                                                <td>
                                                    <div class="v-cell">
                                                        <% if(v.foto_perfil) { %>
                                                            <img src="/uploads/perfil/<%= v.foto_perfil %>" class="v-avatar">
                                                        <% } else { %>
                                                            <div class="v-placeholder"><%= (v.nome_loja || 'L').charAt(0) %></div>
                                                        <% } %>
                                                        <div class="v-info">
                                                            <h6><%= v.nome_loja || 'Sem Nome' %></h6>
                                                            <span><%= v.email %></span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><%= v.nome %></td>
                                                <td>
                                                    <% 
                                                        const limit = v.limite_produtos || 10;
                                                        const current = v.total_produtos || 0;
                                                        const pct = Math.min((current / limit) * 100, 100);
                                                        let color = pct > 90 ? 'fill-red' : pct > 70 ? 'fill-yellow' : 'fill-green';
                                                    %>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <span class="fw-bold small"><%= current %>/<%= limit %></span>
                                                    </div>
                                                    <div class="limit-progress">
                                                        <div class="limit-fill <%= color %>" style="width: <%= pct %>%"></div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (v.loja_ativa) { %>
                                                        <span class="small fw-bold text-success"><span class="status-dot dot-green"></span>Ativa</span>
                                                    <% } else { %>
                                                        <span class="small fw-bold text-danger"><span class="status-dot dot-red"></span>Inativa</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-light border" 
                                                            onclick="openModal('<%= v.id %>', '<%= v.nome_loja %>', '<%= v.plano_id %>')">
                                                        <i class="fas fa-cog"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }) %>
        <% } %>
    </div>

    <!-- TAB 3: PENDENTES (SEM PLANO) -->
    <div id="tab-sem-plano" class="tab-content" style="display: none;">
        <div class="vendor-table-card p-4">
            <% if (vendedoresSemPlano.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h4>Tudo em ordem!</h4>
                    <p class="text-muted">Não há vendedores sem plano no momento.</p>
                </div>
            <% } else { %>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                            <i class="fas fa-exclamation-triangle fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold m-0"><%= vendedoresSemPlano.length %> Vendedores Pendentes</h5>
                            <small class="text-muted">Eles precisam de um plano para operar corretamente.</small>
                        </div>
                    </div>
                    <button class="btn-action btn-primary-custom" data-bs-toggle="modal" data-bs-target="#massAssignModal">
                        Resolver Todos
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table-custom">
                        <thead>
                            <tr>
                                <th>Loja</th>
                                <th>Contato</th>
                                <th>Produtos Atuais</th>
                                <th>Data Cadastro</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% vendedoresSemPlano.forEach(v => { %>
                                <tr>
                                    <td>
                                        <div class="v-cell">
                                            <div class="v-placeholder"><i class="fas fa-store"></i></div>
                                            <div class="v-info">
                                                <h6><%= v.nome_loja || 'Sem Nome' %></h6>
                                                <span><%= v.nome %></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%= v.telefone || '-' %></td>
                                    <td>
                                        <span class="badge bg-light text-dark border"><%= v.total_produtos || 0 %> produtos</span>
                                    </td>
                                    <td class="text-muted small">
                                        <%= new Date(v.created_at).toLocaleDateString('pt-BR') %>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-primary rounded-pill px-3"
                                                onclick="openAssignModal('<%= v.id %>', '<%= v.nome_loja %>')">
                                            Atribuir
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>

</div>

<!-- MODAL: MUDAR PLANO -->
<div class="modal fade" id="changePlanModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold">Gerenciar Plano</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-4">
                <form action="/admin/vendedor/mudar-plano" method="POST">
                    <input type="hidden" name="vendedor_id" id="modalVendedorId">
                    
                    <div class="mb-3">
                        <label class="small fw-bold text-muted text-uppercase mb-1">Loja Selecionada</label>
                        <input type="text" class="form-control bg-light border-0" id="modalVendedorNome" readonly>
                    </div>

                    <div class="mb-4">
                        <label class="small fw-bold text-muted text-uppercase mb-1">Novo Plano</label>
                        <select class="form-select border-2" name="novo_plano_id" id="modalPlanoSelect">
                            <% planos.forEach(p => { %>
                                <option value="<%= p.id %>"><%= p.nome %> (<%= p.limite_produtos %> prods)</option>
                            <% }) %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 rounded-pill py-2 fw-bold">Salvar Alteração</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- MODAL: MASS ASSIGN -->
<div class="modal fade" id="massAssignModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">
            <div class="modal-header border-bottom-0 bg-dark text-white rounded-top-4">
                <h5 class="modal-title fw-bold"><i class="fas fa-magic me-2"></i>Atribuição em Massa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form action="/admin/vendedor/atribuir-plano-massivo" method="POST">
                    <p class="text-muted mb-4">Selecione um plano para aplicar a todos os <strong><%= vendedoresSemPlano.length %></strong> vendedores pendentes.</p>
                    
                    <div class="mb-4">
                        <label class="fw-bold mb-2">Plano Destino</label>
                        <select class="form-select border-2" name="plano_id" required>
                            <option value="">Selecione...</option>
                            <% planos.forEach(p => { %>
                                <option value="<%= p.id %>"><%= p.nome %></option>
                            <% }) %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Aplicar a Todos</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Tab Switcher Simples
    function switchTab(tabId, btn) {
        // Esconde todos
        document.querySelectorAll('.tab-content').forEach(el => el.style.display = 'none');
        document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
        
        // Mostra o alvo
        document.getElementById('tab-' + tabId).style.display = 'block';
        btn.classList.add('active');
    }

    // Open Modal Helpers
    function openModal(id, name, currentPlan) {
        document.getElementById('modalVendedorId').value = id;
        document.getElementById('modalVendedorNome').value = name;
        document.getElementById('modalPlanoSelect').value = currentPlan;
        new bootstrap.Modal(document.getElementById('changePlanModal')).show();
    }

    function openAssignModal(id, name) {
        // Reusa o modal de mudança (são iguais na prática, só muda o contexto visual)
        document.getElementById('modalVendedorId').value = id;
        document.getElementById('modalVendedorNome').value = name;
        new bootstrap.Modal(document.getElementById('changePlanModal')).show();
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>