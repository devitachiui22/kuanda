<style>
  /* =========================================
     KUANDA ADMIN COMMAND CENTER
     ========================================= */
  :root {
    --k-red: #E31C25;
    --k-black: #0F0F0F;
    --k-blue: #0066FF;
    --k-green: #00B050;
    --k-purple: #8B5CF6;
    --k-orange: #F59E0B;
    --bg-dash: #F3F4F6;
    --card-radius: 24px;
    --shadow-card: 0 10px 30px rgba(0,0,0,0.04);
    --shadow-hover: 0 20px 40px rgba(0,0,0,0.08);
  }

  body { background-color: var(--bg-dash); }

  /* 1. HEADER */
  .admin-header {
    display: flex; justify-content: space-between; align-items: center;
    margin-bottom: 35px;
  }
  .admin-title {
    font-size: 2rem; font-weight: 800; color: var(--k-black); margin: 0;
    letter-spacing: -1px; display: flex; align-items: center; gap: 12px;
  }
  .admin-badge {
    background: var(--k-black); color: white; font-size: 0.75rem;
    padding: 5px 12px; border-radius: 20px; text-transform: uppercase; letter-spacing: 1px;
  }
  .admin-date { color: #666; font-weight: 500; }

  /* 2. STATS CARDS (High End) */
  .stats-grid {
    display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 24px; margin-bottom: 40px;
  }

  .stat-card-pro {
    background: white; border-radius: var(--card-radius); padding: 25px;
    box-shadow: var(--shadow-card); border: 1px solid rgba(0,0,0,0.03);
    display: flex; align-items: center; justify-content: space-between;
    transition: all 0.3s ease; position: relative; overflow: hidden;
  }
  .stat-card-pro:hover { transform: translateY(-5px); box-shadow: var(--shadow-hover); }
  
  .stat-data h3 { font-size: 2.2rem; font-weight: 800; margin: 0; color: var(--k-black); line-height: 1.1; }
  .stat-data p { margin: 5px 0 0; color: #888; font-size: 0.85rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px; }
  
  .stat-icon-box {
    width: 65px; height: 65px; border-radius: 20px;
    display: flex; align-items: center; justify-content: center;
    font-size: 1.8rem; color: white;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  /* Variações de Cores */
  .stat-vendors .stat-icon-box { background: linear-gradient(135deg, #0066FF, #0044AA); box-shadow: 0 8px 20px rgba(0, 102, 255, 0.3); }
  .stat-clients .stat-icon-box { background: linear-gradient(135deg, #00B050, #008030); box-shadow: 0 8px 20px rgba(0, 176, 80, 0.3); }
  .stat-products .stat-icon-box { background: linear-gradient(135deg, #8B5CF6, #6D28D9); box-shadow: 0 8px 20px rgba(139, 92, 246, 0.3); }
  .stat-vip .stat-icon-box { background: linear-gradient(135deg, #F59E0B, #D97706); box-shadow: 0 8px 20px rgba(245, 158, 11, 0.3); }

  /* 3. QUICK ACTIONS (LAUNCHER STYLE) */
  .section-title { font-size: 1.1rem; font-weight: 800; color: var(--k-black); margin-bottom: 20px; display: flex; align-items: center; gap: 10px; }
  
  .actions-grid {
    display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px; margin-bottom: 40px;
  }

  .action-tile {
    background: white; padding: 25px 20px; border-radius: var(--card-radius);
    text-align: center; text-decoration: none; color: var(--k-black);
    box-shadow: var(--shadow-card); border: 1px solid rgba(0,0,0,0.03);
    transition: 0.3s; display: flex; flex-direction: column; align-items: center; gap: 15px;
  }
  .action-tile:hover { transform: translateY(-5px); box-shadow: var(--shadow-hover); background: var(--k-black); }
  .action-tile:hover span { color: white; }
  .action-tile:hover .action-icon { background: rgba(255,255,255,0.2); color: white; }

  .action-icon {
    width: 60px; height: 60px; border-radius: 50%;
    background: #F3F4F6; color: var(--k-black);
    display: flex; align-items: center; justify-content: center;
    font-size: 1.5rem; transition: 0.3s;
  }
  .action-label { font-weight: 700; font-size: 0.95rem; }

  /* 4. CONTENT SPLIT */
  .dash-split {
    display: grid; grid-template-columns: 2fr 1fr; gap: 30px;
  }

  .dash-card {
    background: white; border-radius: var(--card-radius); padding: 25px;
    box-shadow: var(--shadow-card); height: 100%; border: 1px solid rgba(0,0,0,0.03);
  }

  /* Timeline */
  .timeline-modern { position: relative; padding-left: 20px; margin-top: 10px; }
  .timeline-modern::before {
    content: ''; position: absolute; left: 0; top: 5px; bottom: 5px;
    width: 2px; background: #eee; border-radius: 2px;
  }
  
  .tl-item { position: relative; padding-left: 25px; margin-bottom: 25px; }
  .tl-item:last-child { margin-bottom: 0; }
  
  .tl-dot {
    position: absolute; left: -5px; top: 5px; width: 12px; height: 12px;
    border-radius: 50%; border: 2px solid white; box-shadow: 0 0 0 2px #eee;
  }
  .dot-primary { background: var(--k-blue); box-shadow: 0 0 0 2px rgba(0, 102, 255, 0.2); }
  .dot-warning { background: var(--k-orange); box-shadow: 0 0 0 2px rgba(245, 158, 11, 0.2); }
  .dot-success { background: var(--k-green); box-shadow: 0 0 0 2px rgba(0, 176, 80, 0.2); }

  .tl-content h6 { font-weight: 700; margin: 0 0 5px; font-size: 0.95rem; }
  .tl-time { font-size: 0.75rem; color: #999; font-weight: 600; }

  /* Stats Bars */
  .sys-stat-row { margin-bottom: 20px; }
  .sys-stat-header { display: flex; justify-content: space-between; margin-bottom: 8px; font-size: 0.85rem; font-weight: 700; }
  .progress-thin { height: 8px; background: #F3F4F6; border-radius: 10px; overflow: hidden; }
  .progress-bar-fill { height: 100%; border-radius: 10px; transition: width 1.5s ease-in-out; width: 0; }

  /* System Info Grid */
  .sys-info-grid {
    display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-top: 20px;
  }
  .sys-box {
    background: #F9FAFB; padding: 15px; border-radius: 16px; text-align: center;
  }
  .sys-label { font-size: 0.7rem; color: #888; text-transform: uppercase; font-weight: 700; display: block; margin-bottom: 5px; }
  .sys-val { font-weight: 800; color: var(--k-black); }
  .status-dot { display: inline-block; width: 8px; height: 8px; background: var(--k-green); border-radius: 50%; margin-right: 5px; animation: pulse 2s infinite; }

  @keyframes pulse { 0% { box-shadow: 0 0 0 0 rgba(0, 176, 80, 0.4); } 70% { box-shadow: 0 0 0 6px rgba(0, 176, 80, 0); } 100% { box-shadow: 0 0 0 0 rgba(0, 176, 80, 0); } }

  /* Fade Animation */
  .fade-up { animation: fadeUp 0.6s ease forwards; opacity: 0; transform: translateY(20px); }
  @keyframes fadeUp { to { opacity: 1; transform: translateY(0); } }

  @media (max-width: 991px) {
    .dash-split { grid-template-columns: 1fr; }
  }
</style>

