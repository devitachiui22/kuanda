<!-- Scripts L√≥gicos (Mantidos e Adaptados para os novos seletores) -->
<script>
// ==============================
// SISTEMA DE CARRINHO GLOBAL
// ==============================

window.CartSystem = {
  cart: [],
  
  async init() {
    console.log('üöÄ Inicializando Carrinho Premium...');
    await this.loadCart();
    this.initEvents();
    this.updateGlobalCount();
  },
  
  async loadCart() {
    try {
      const response = await fetch('/carrinho/data');
      const data = await response.json();
      
      if (data.success) {
        this.cart = data.carrinho;
        this.renderCart();
        this.updateOrderSummary();
        this.updateButtonsState();
      }
    } catch (error) {
      console.error('Erro:', error);
      document.getElementById('cartItemsContainer').innerHTML = `
        <div class="alert alert-danger">Erro ao carregar carrinho. Tente recarregar.</div>
      `;
    }
  },
  
  renderCart() {
    const container = document.getElementById('cartItemsContainer');
    const emptyTemplate = document.getElementById('emptyCartTemplate');
    const itemTemplate = document.getElementById('cartItemTemplate');
    
    container.innerHTML = '';
    
    // Estado Vazio
    if (!this.cart || this.cart.length === 0) {
      const emptyClone = emptyTemplate.content.cloneNode(true);
      container.appendChild(emptyClone);
      return;
    }
    
    // Renderizar Itens
    this.cart.forEach(item => {
      const clone = itemTemplate.content.cloneNode(true);
      const row = clone.querySelector('.cart-item'); // Refer√™ncia para anima√ß√µes se precisar
      
      // Imagem
      const img = clone.querySelector('.item-image');
      if (item.imagem) {
        img.src = `/uploads/produtos/${item.imagem}`;
        img.onerror = () => img.src = 'https://via.placeholder.com/100?text=Sem+Foto';
      } else {
        img.src = 'https://via.placeholder.com/100?text=Sem+Foto';
      }
      
      // Textos
      clone.querySelector('.item-name').textContent = item.nome;
      clone.querySelector('.item-vendor').textContent = item.vendedor || 'Vendedor Kuanda';
      clone.querySelector('.item-price').textContent = this.formatPrice(item.preco) + ' Kz';
      clone.querySelector('.item-stock').textContent = item.estoque || 0;
      
      // Inputs
      const qtyInput = clone.querySelector('.quantity-input');
      qtyInput.value = item.quantidade || 1;
      qtyInput.dataset.id = item.id;
      
      // Total Item
      const itemTotal = (item.preco || 0) * (item.quantidade || 1);
      clone.querySelector('.item-total').textContent = this.formatPrice(itemTotal) + ' Kz';
      
      // Bot√µes (Data Attributes para Event Delegation)
      clone.querySelector('.minus-btn').dataset.id = item.id;
      clone.querySelector('.plus-btn').dataset.id = item.id;
      
      const removeBtn = clone.querySelector('.remove-btn');
      removeBtn.dataset.id = item.id;
      removeBtn.dataset.name = item.nome;
      
      container.appendChild(clone);
    });
    
    // Bot√£o Limpar Tudo (no final da lista)
    if (this.cart.length > 0) {
        const clearDiv = document.createElement('div');
        clearDiv.className = 'd-flex justify-content-end mt-2 mb-5';
        clearDiv.innerHTML = `
            <button class="btn btn-link text-danger text-decoration-none fw-bold" id="clearCartBtn">
                <i class="fas fa-trash me-2"></i>Esvaziar Carrinho
            </button>
        `;
        container.appendChild(clearDiv);
    }
  },
  
  initEvents() {
    document.addEventListener('click', (e) => {
      // Event Delegation
      const target = e.target;
      
      // Minus
      const minusBtn = target.closest('.minus-btn');
      if (minusBtn) this.changeQuantity(minusBtn.dataset.id, -1);
      
      // Plus
      const plusBtn = target.closest('.plus-btn');
      if (plusBtn) this.changeQuantity(plusBtn.dataset.id, 1);
      
      // Remove
      const removeBtn = target.closest('.remove-btn');
      if (removeBtn) this.removeItem(removeBtn.dataset.id, removeBtn.dataset.name);
      
      // Clear All
      const clearBtn = target.closest('#clearCartBtn');
      if (clearBtn) this.clearCart();
    });
    
    // Bot√µes de A√ß√£o
    const whatsappBtn = document.getElementById('whatsappBtn');
    if(whatsappBtn) whatsappBtn.addEventListener('click', () => this.checkoutWhatsApp());
    
    const checkoutBtn = document.getElementById('checkoutBtn');
    if(checkoutBtn) checkoutBtn.addEventListener('click', () => window.location.href = '/finalizar-compra');
  },
  
  async changeQuantity(id, change) {
    const item = this.cart.find(i => i.id == id);
    if (!item) return;
    
    const newQty = (item.quantidade || 1) + change;
    
    if (newQty < 1) return; // N√£o baixa de 1
    if (newQty > (item.estoque || 99)) {
      this.showToast(`Estoque m√°ximo: ${item.estoque}`, 'warning');
      return;
    }
    
    this.setQuantity(id, newQty);
  },
  
  async setQuantity(id, qty) {
    try {
      const res = await fetch('/carrinho/atualizar', {
        method: 'POST',
        headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        body: `produto_id=${id}&quantidade=${qty}`
      });
      const data = await res.json();
      if (data.success) {
        await this.loadCart(); // Recarrega para atualizar totais
      } else {
        this.showToast(data.message, 'error');
      }
    } catch (e) { console.error(e); }
  },
  
  async removeItem(id, name) {
    if(!confirm(`Remover "${name}" do carrinho?`)) return;
    try {
      const res = await fetch('/carrinho/remover', {
        method: 'POST',
        headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        body: `produto_id=${id}`
      });
      if ((await res.json()).success) {
        this.showToast('Item removido', 'success');
        this.loadCart();
      }
    } catch (e) { console.error(e); }
  },
  
  async clearCart() {
    if(!confirm('Tem certeza que deseja esvaziar o carrinho?')) return;
    try {
      const res = await fetch('/carrinho/limpar', { method: 'POST' });
      if ((await res.json()).success) {
        this.loadCart();
        this.showToast('Carrinho limpo', 'success');
      }
    } catch (e) { console.error(e); }
  },
  
  updateOrderSummary() {
    let subtotal = 0;
    let count = 0;
    this.cart.forEach(item => {
      subtotal += (item.preco || 0) * (item.quantidade || 1);
      count += (item.quantidade || 0);
    });
    
    const formatted = this.formatPrice(subtotal) + ' Kz';
    document.getElementById('subtotal').textContent = formatted;
    document.getElementById('total').textContent = formatted;
    document.getElementById('totalItems').textContent = count;
    document.getElementById('cartCount').textContent = count;
  },
  
  updateButtonsState() {
    const hasItems = this.cart.length > 0;
    const btns = document.querySelectorAll('#whatsappBtn, #checkoutBtn');
    btns.forEach(btn => btn.disabled = !hasItems);
  },
  
  updateGlobalCount() {
    // Atualiza badges no layout se existirem
    const total = this.cart.reduce((acc, i) => acc + (i.quantidade || 0), 0);
    const globalBadges = document.querySelectorAll('#deskCartCount, #mobileCartCount');
    globalBadges.forEach(b => {
        b.textContent = total;
        b.style.display = total > 0 ? 'inline-block' : 'none';
    });
  },
  
  checkoutWhatsApp() {
    if (this.cart.length === 0) return;
    
    // Agrupar pedidos por vendedor (L√≥gica mantida do seu c√≥digo original)
    const porVendedor = {};
    this.cart.forEach(item => {
        const vid = item.vendedor_id;
        if (!porVendedor[vid]) {
            porVendedor[vid] = { nome: item.vendedor, tel: item.vendedor_telefone, itens: [], total: 0 };
        }
        const sub = item.preco * item.quantidade;
        porVendedor[vid].itens.push({ ...item, sub });
        porVendedor[vid].total += sub;
    });

    // Abrir chats
    Object.values(porVendedor).forEach(v => {
        let msg = `*Ol√° ${v.nome}! Novo pedido via KuandaShop:*\n\n`;
        v.itens.forEach((p, i) => {
            msg += `${i+1}. ${p.nome} (x${p.quantidade})\n   Pre√ßo: ${this.formatPrice(p.preco)} Kz\n`;
        });
        msg += `\n*Total: ${this.formatPrice(v.total)} Kz*\n`;
        msg += `\nAguardo confirma√ß√£o e dados de pagamento.`;
        
        const tel = v.tel ? v.tel.replace(/\D/g, '') : '';
        if(tel) window.open(`https://wa.me/${tel}?text=${encodeURIComponent(msg)}`, '_blank');
        else alert(`O vendedor ${v.nome} n√£o cadastrou telefone.`);
    });
  },
  
  showToast(msg, type='success') {
    // Usa o sistema de toast do layout se dispon√≠vel, ou cria um b√°sico
    const container = document.querySelector('.toast-container') || document.body;
    const div = document.createElement('div');
    const color = type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-warning';
    div.className = `toast show align-items-center text-white ${color} border-0 position-fixed top-0 end-0 m-3`;
    div.style.zIndex = '9999';
    div.innerHTML = `<div class="d-flex"><div class="toast-body">${msg}</div></div>`;
    container.appendChild(div);
    setTimeout(() => div.remove(), 3000);
  },
  
  formatPrice(val) {
    return Number(val).toLocaleString('pt-AO', {minimumFractionDigits: 2});
  }
};

// Iniciar
document.addEventListener('DOMContentLoaded', () => {
    // Verificar usu√°rio atual (mantido do original)
    fetch('/api/current-user')
        .then(r => r.json())
        .then(d => { if(d.success) window.currentUser = d.user; });
        
    if (window.CartSystem) window.CartSystem.init();
});
</script>