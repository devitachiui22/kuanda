                                            <span class="badge-status status-vip" title="Produto VIP"><i class="fas fa-crown"></i></span>
                                        <% } %>
                                    </td>

                                    <!-- Coluna Ações -->
                                    <td>
                                        <div class="d-flex">
                                            <a href="/produto/<%= produto.id %>" target="_blank" class="action-btn btn-view" title="Ver no Site"><i class="fas fa-eye"></i></a>
