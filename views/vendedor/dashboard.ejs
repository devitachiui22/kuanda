<!DOCTYPE html>
<html lang="pt-AO">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Painel do Vendedor | KuandaShop</title>
    
    <!-- CSS & Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        /* =========================================
           KUANDA GLOBAL DESIGN SYSTEM
           ========================================= */
        :root {
            --k-red: #E31C25;
            --k-red-dark: #B01018;
            --k-black: #0F0F0F;
            --k-gray-light: #F8F9FA;
            --k-border: #EDF2F7;
            --radius-lg: 24px;
            --radius-md: 16px;
            --shadow-lux: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
            --shadow-hover: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #FAFAFA;
            color: var(--k-black);
            margin: 0;
            -webkit-font-smoothing: antialiased;
        }

        a { text-decoration: none !important; transition: 0.3s; }

        /* HEADER & NAVIGATION */
        .dash-header {
            display: flex; justify-content: space-between; align-items: center;
            margin-bottom: 35px; flex-wrap: wrap; gap: 20px;
        }
        .dash-title h2 { font-weight: 800; font-size: 1.75rem; letter-spacing: -1px; margin: 0; }
        .dash-subtitle { color: #718096; font-size: 0.9rem; font-weight: 500; }
        
        .btn-new-prod {
            background: var(--k-black); color: white; padding: 14px 28px;
            border-radius: 50px; font-weight: 700; border: none;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1); display: flex; align-items: center; gap: 10px;
        }
        .btn-new-prod:hover { transform: translateY(-3px); background: #333; color: white; }

        /* STATS CARDS */
        .stats-grid {
            display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px; margin-bottom: 30px;
        }
        .stat-card {
            background: white; border-radius: var(--radius-md); padding: 25px;
            box-shadow: var(--shadow-lux); border: 1px solid var(--k-border);
            display: flex; align-items: center; justify-content: space-between;
            transition: 0.3s;
        }
        .stat-card:hover { transform: translateY(-5px); box-shadow: var(--shadow-hover); }
        .stat-info h3 { font-size: 2rem; font-weight: 800; margin: 0; line-height: 1; }
        .stat-info p { color: #A0AEC0; font-size: 0.75rem; font-weight: 700; text-transform: uppercase; margin-top: 5px; margin-bottom: 0; letter-spacing: 0.5px; }
        .stat-icon { width: 55px; height: 55px; border-radius: 15px; display: flex; align-items: center; justify-content: center; font-size: 1.3rem; }
        
        .stat-products .stat-icon { background: #E3F2FD; color: #1976D2; }
        .stat-active .stat-icon { background: #E8F5E9; color: #2E7D32; }
        .stat-followers .stat-icon { background: #F3E5F5; color: #7B1FA2; }
        .stat-rating .stat-icon { background: #FFF8E1; color: #FFA000; }

        /* SIDE-BY-SIDE MANAGEMENT SECTION */
        .management-container {
            display: grid; grid-template-columns: 1fr 1.5fr; gap: 25px; margin-bottom: 35px;
        }

        /* CARD LIMITE (PROFESSIONAL) */
        .card-management {
            background: white; border-radius: var(--radius-lg); padding: 30px;
            box-shadow: var(--shadow-lux); border: 1px solid var(--k-border);
            display: flex; flex-direction: column; justify-content: center;
        }
        .limit-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; }
        .limit-label { font-weight: 800; font-size: 0.95rem; display: flex; align-items: center; gap: 10px; color: #4A5568; }
        
        .limit-progress-box { height: 14px; background: #EDF2F7; border-radius: 50px; overflow: hidden; margin-bottom: 15px; }
        .limit-bar { height: 100%; border-radius: 50px; transition: 1.5s cubic-bezier(0.17, 0.67, 0.83, 0.67); }
        
        .limit-footer { display: flex; justify-content: space-between; font-size: 0.85rem; font-weight: 700; color: #718096; }
        .limit-footer strong { color: var(--k-black); }

        /* QUICK ACTIONS (HORIZONTAL SEQUENCE) */
        .actions-horizontal {
            display: grid; grid-template-columns: repeat(5, 1fr); gap: 12px;
        }
        .action-item {
            background: #F8F9FA; border: 1px solid var(--k-border); border-radius: var(--radius-md);
            padding: 20px 10px; text-align: center; color: var(--k-black); transition: 0.3s;
            display: flex; flex-direction: column; align-items: center; gap: 10px;
        }
        .action-item:hover {
            background: var(--k-black); color: white; border-color: var(--k-black); transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .action-item i { font-size: 1.5rem; }
        .action-item span { font-size: 0.7rem; font-weight: 800; text-transform: uppercase; letter-spacing: 0.3px; }

        /* TABLE SECTION */
        .content-card {
            background: white; border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lux); border: 1px solid var(--k-border); overflow: hidden;
        }
        .card-head {
            padding: 25px 30px; border-bottom: 1px solid var(--k-border);
            display: flex; justify-content: space-between; align-items: center;
        }
        .card-head h5 { margin: 0; font-weight: 800; font-size: 1.1rem; display: flex; align-items: center; gap: 12px; }

        .table-custom { width: 100%; border-collapse: separate; border-spacing: 0; }
        .table-custom th {
            background: #FAFAFA; color: #A0AEC0; font-size: 0.75rem; font-weight: 800;
            text-transform: uppercase; padding: 18px 25px; border-bottom: 1px solid var(--k-border);
        }
        .table-custom td { padding: 18px 25px; border-bottom: 1px solid #F7FAFC; vertical-align: middle; }
        .prod-thumb { width: 52px; height: 52px; border-radius: 14px; object-fit: cover; background: #F1F5F9; border: 1px solid var(--k-border); }
        .prod-name { font-weight: 700; color: var(--k-black); display: block; margin-bottom: 2px; }
        .prod-date { font-size: 0.75rem; color: #A0AEC0; font-weight: 600; }

        .badge-status { padding: 6px 14px; border-radius: 50px; font-size: 0.7rem; font-weight: 800; display: inline-flex; align-items: center; gap: 6px; }
        .status-active { background: #E8F5E9; color: #2E7D32; }
        .status-inactive { background: #FFEBEE; color: #C62828; }

        .action-btn { width: 38px; height: 38px; border-radius: 12px; border: none; display: inline-flex; align-items: center; justify-content: center; transition: 0.2s; margin-right: 6px; }
        .btn-view { background: #F0F7FF; color: #007AFF; }
        .btn-edit { background: #F5F3FF; color: #7C3AED; }
        .btn-toggle { background: #F1F5F9; color: #64748B; }
        .action-btn:hover { transform: scale(1.1); filter: brightness(0.95); }

        /* ANIMATIONS */
        .fade-up { animation: fadeUp 0.6s ease forwards; opacity: 0; transform: translateY(20px); }
        @keyframes fadeUp { to { opacity: 1; transform: translateY(0); } }

        @media (max-width: 991px) {
            .management-container { grid-template-columns: 1fr; }
            .actions-horizontal { grid-template-columns: repeat(3, 1fr); }
        }
    </style>


<div class="container py-5 dashboard-container">
    
    <!-- ALERTAS DE SISTEMA -->
    <% if (messages.success) { %>
        <div class="alert alert-success border-0 shadow-sm rounded-4 mb-4 fade-up">
            <i class="fas fa-check-circle me-2"></i> <%= messages.success %>
        </div>
    <% } %>

    <!-- 1. HEADER -->
    <div class="dash-header fade-up">
        <div class="dash-title">
            <h2>Painel do Vendedor</h2>
            <p class="dash-subtitle">Gerencie sua loja <strong><%= user.nome_loja || 'Kuanda' %></strong> com eficiência.</p>
        </div>
        <a href="/vendedor/produto/novo" class="btn-new-prod">
            <i class="fas fa-plus-circle"></i> NOVO PRODUTO
        </a>
    </div>

    <!-- 2. STATS CARDS -->
    <div class="stats-grid">
        <div class="stat-card stat-products fade-up" style="animation-delay: 0.1s;">
            <div class="stat-info"><h3><%= stats.total_produtos || 0 %></h3><p>Produtos</p></div>
            <div class="stat-icon"><i class="fas fa-box"></i></div>
        </div>
        <div class="stat-card stat-active fade-up" style="animation-delay: 0.2s;">
            <div class="stat-info"><h3><%= stats.produtos_ativos || 0 %></h3><p>Ativos</p></div>
            <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
        </div>
        <div class="stat-card stat-followers fade-up" style="animation-delay: 0.3s;">
            <div class="stat-info"><h3><%= stats.total_seguidores || 0 %></h3><p>Seguidores</p></div>
            <div class="stat-icon"><i class="fas fa-users"></i></div>
        </div>
        <div class="stat-card stat-rating fade-up" style="animation-delay: 0.4s;">
            <div class="stat-info"><h3><%= stats.media_classificacao ? parseFloat(stats.media_classificacao).toFixed(1) : '0.0' %></h3><p>Avaliação</p></div>
            <div class="stat-icon"><i class="fas fa-star"></i></div>
        </div>
    </div>

    <!-- 3. MANAGEMENT SECTION (LIMITE + AÇÕES RÁPIDAS LADO A LADO) -->
    <div class="management-container fade-up" style="animation-delay: 0.5s;">
        
        <!-- CARD LIMITE DE PRODUTOS -->
        <div class="card-management">
            <div class="limit-header">
                <span class="limit-label"><img src="https://img.icons8.com/?size=100&id=e40ERdqR9nQr&format=png&color=000000" width="24"> Capacidade da Loja</span>
                <span class="badge rounded-pill bg-dark py-2 px-3 fw-800">
                    <%= limiteInfo.produtos_cadastrados %> / <%= limiteInfo.limite_produtos %>
                </span>
            </div>
            
            <% const perc = (limiteInfo.produtos_cadastrados / limiteInfo.limite_produtos) * 100; %>
            <div class="limit-progress-box">
                <div class="limit-bar" style="width: <%= perc %>%; background: <%= perc > 90 ? 'var(--k-red)' : '#00C853' %>;"></div>
            </div>
            
            <div class="limit-footer">
                <span>Disponíveis: <strong><%= limiteInfo.produtos_disponiveis %></strong></span>
                <% if (limiteInfo.produtos_disponiveis <= 0) { %>
                    <span class="text-danger"><i class="fas fa-exclamation-triangle"></i> Limite Esgotado</span>
                <% } %>
            </div>
        </div>

        <!-- CARD AÇÕES RÁPIDAS (HORIZONTAL) -->
        <div class="card-management">
            <div class="limit-header">
                <span class="limit-label"><img src="https://img.icons8.com/3d-fluency/94/flash-on.png" width="24"> Acesso Rápido</span>
            </div>
            <div class="actions-horizontal">
                <a href="/vendedor/produto/novo" class="action-item">
                    <i class="fas fa-plus text-danger"></i>
                    <span>Novo</span>
                </a>
                <a href="/vendedor/produtos" class="action-item">
                    <i class="fas fa-layer-group text-primary"></i>
                    <span>Catálogo</span>
                </a>
                <a href="/vendedor/vendas" class="action-item">
                    <i class="fas fa-shopping-cart text-success"></i>
                    <span>Vendas</span>
                </a>
                <a href="/loja/<%= user.id %>" target="_blank" class="action-item">
                    <i class="fas fa-store text-warning"></i>
                    <span>Loja</span>
                </a>
                <a href="/perfil" class="action-item">
                    <i class="fas fa-user-gear text-secondary"></i>
                    <span>Perfil</span>
                </a>
            </div>
        </div>
    </div>

    <!-- 4. TABELA DE PRODUTOS RECENTES -->
    <div class="content-card fade-up" style="animation-delay: 0.6s;">
        <div class="card-head">
            <h5><img src="https://img.icons8.com/?size=100&id=MBnsaBziMUGE&format=png&color=000000" width="28"> Últimos Produtos Cadastrados</h5>
            <a href="/vendedor/produtos" class="btn btn-sm btn-light border rounded-pill fw-bold px-3">Ver Todos</a>
        </div>
        
        <div class="table-responsive">
            <% if (produtosRecentes && produtosRecentes.length > 0) { %>
                <table class="table-custom">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th>Preço</th>
                            <th>Estoque</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtosRecentes.forEach(produto => { %>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <% let imgUrl = produto.imagem1 ? '/uploads/produtos/' + produto.imagem1 : 'https://via.placeholder.com/150'; %>
                                        <img src="<%= imgUrl %>" class="prod-thumb" onerror="this.src='https://via.placeholder.com/52'">
                                        <div>
                                            <span class="prod-name"><%= produto.nome.substring(0, 30) %>...</span>
                                            <span class="prod-date">Cadastrado em <%= new Date(produto.created_at).toLocaleDateString('pt-BR') %></span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-800 text-dark"><%= parseFloat(produto.preco).toLocaleString('pt-AO') %> Kz</div>
                                </td>
                                <td>
                                    <span class="fw-700 <%= produto.estoque < 5 ? 'text-danger' : 'text-muted' %>">
                                        <%= produto.estoque %> un
                                    </span>
                                </td>
                                <td>
                                    <span class="badge-status <%= produto.ativo ? 'status-active' : 'status-inactive' %>">
                                        <i class="fas <%= produto.ativo ? 'fa-check-circle' : 'fa-times-circle' %>"></i>
                                        <%= produto.ativo ? 'Ativo' : 'Pausado' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a href="/produto/<%= produto.id %>" target="_blank" class="action-btn btn-view" title="Visualizar"><i class="fas fa-eye"></i></a>
                                        <a href="/vendedor/produto/<%= produto.id %>/editar" class="action-btn btn-edit" title="Editar"><i class="fas fa-pen"></i></a>
                                        <button onclick="toggleStatus(<%= produto.id %>, <%= !produto.ativo %>)" class="action-btn btn-toggle" title="Alternar Status">
                                            <i class="fas fa-power-off"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="py-5 text-center">
                    <img src="https://img.icons8.com/3d-fluency/94/box.png" width="80">
                    <h6 class="mt-3 fw-bold text-muted">Sua loja ainda não tem produtos.</h6>
                    <a href="/vendedor/produto/novo" class="btn btn-dark btn-sm rounded-pill mt-2">Cadastrar Primeiro Produto</a>
                </div>
            <% } %>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Função para Alternar Status do Produto
    function toggleStatus(id, status) {
        if(!confirm('Deseja realmente alterar a visibilidade deste produto?')) return;
        
        fetch(`/vendedor/produto/${id}/status`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ ativo: status })
        })
        .then(res => res.json())
        .then(data => {
            if(data.success) {
                location.reload();
            } else {
                alert('Erro ao atualizar status: ' + data.message);
            }
        })
        .catch(err => console.error('Erro:', err));
    }

    // Animação de entrada dos números
    document.addEventListener('DOMContentLoaded', () => {
        const counters = document.querySelectorAll('.stat-info h3');
        counters.forEach(c => {
            const target = +c.innerText.replace(/[^0-9.]/g, '');
            if(isNaN(target)) return;
            let count = 0;
            const inc = target / 50;
            const update = () => {
                count += inc;
                if(count < target) {
                    c.innerText = Math.ceil(count).toLocaleString();
                    setTimeout(update, 20);
                } else {
                    c.innerText = target.toLocaleString();
                }
            };
            update();
        });
    });
</script>

</body>
</html>