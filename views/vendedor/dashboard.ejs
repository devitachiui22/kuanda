<script>
  // 1. Animação de Números (Counters)
  document.addEventListener('DOMContentLoaded', () => {
    const counters = document.querySelectorAll('.stat-info h3');
    counters.forEach(counter => {
      const target = +counter.innerText;
      if (isNaN(target)) return; // Pula se não for número
      
      const speed = 200; 
      const inc = target / speed;
      
      let count = 0;
      const updateCount = () => {
        count += inc;
        if (count < target) {
          counter.innerText = Math.ceil(count);
          setTimeout(updateCount, 1);
        } else {
          counter.innerText = target;
        }
      };
      updateCount();
    });
  });

  // 2. Toggle Status Logic
  function toggleProductStatus(id, newStatus) {
    // Confirmação Visual
    if(!confirm('Tem certeza que deseja alterar o status deste produto?')) return;

    fetch(`/vendedor/produto/${id}/status`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ ativo: newStatus })
    })
    .then(r => r.json())
    .then(data => {
        if(data.success) {
            // Toast de Sucesso
            showToast('Status atualizado com sucesso!', 'success');
            setTimeout(() => window.location.reload(), 1000);
        } else {
            showToast('Erro ao atualizar: ' + data.message, 'error');
        }
    })
    .catch(e => {
        console.error(e);
        showToast('Erro de conexão.', 'error');
    });
  }

  // 3. Toast Helper (Global)
  function showToast(msg, type) {
    const div = document.createElement('div');
    const bg = type === 'success' ? '#2E7D32' : '#C62828';
    div.style.cssText = `position:fixed; top:20px; right:20px; padding:15px 25px; background:${bg}; color:white; border-radius:12px; z-index:9999; box-shadow:0 10px 30px rgba(0,0,0,0.2); font-weight:600; animation: slideIn 0.3s ease;`;
    div.innerHTML = `<i class="fas fa-${type==='success'?'check':'times'}-circle me-2"></i> ${msg}`;
    document.body.appendChild(div);
    setTimeout(() => div.remove(), 3000);
  }

  // Inject Keyframes
  const style = document.createElement('style');
  style.textContent = `@keyframes slideIn { from{transform:translateX(100%)} to{transform:translateX(0)} }`;
  document.head.appendChild(style);
</script>