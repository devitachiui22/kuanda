                                        %>
                                        <span class="<%= stockClass %>"><%= produto.estoque %> un</span>
                                    </td>

                                    <!-- Coluna Status -->
                                    <td>
                                        <% if (produto.ativo) { %>
                                            <span class="badge-status status-active"><i class="fas fa-check-circle"></i> Ativo</span>
                                        <% } else { %>
                                            <span class="badge-status status-inactive"><i class="fas fa-times-circle"></i> Inativo</span>
                                        <% } %>
