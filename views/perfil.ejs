
    <style>
        /* =========================================
           KUANDA ULTRA-MODERN PROFILE SYSTEM
           ========================================= */
        :root {
            --primary: #0F0F0F;
            --accent: #E31C25;
            --accent-soft: #FEF2F2;
            --surface: #FFFFFF;
            --bg-body: #FAFAFA;
            --text-main: #1F2937;
            --text-muted: #6B7280;
            --border-light: #F3F4F6;
            --radius-xl: 32px;
            --radius-lg: 24px;
            --radius-md: 16px;
            --shadow-soft: 0 10px 40px -10px rgba(0,0,0,0.06);
            --shadow-float: 0 20px 60px -15px rgba(0,0,0,0.12);
        }

        body {
            background-color: var(--bg-body);
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--text-main);
            /* Espaço para Navbar Fixa */
            padding-top: 100px;
            padding-bottom: 120px;
        }

        a { text-decoration: none !important; transition: all 0.3s ease; }

        /* MENSAGENS FLUTUANTES */
        .alert-floating {
            position: fixed; top: 110px; right: 20px; z-index: 9999;
            border-radius: 16px; padding: 16px 24px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            animation: slideIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
            display: flex; align-items: center; gap: 12px;
            font-weight: 700; font-size: 0.95rem;
            backdrop-filter: blur(10px);
        }
        .alert-error { background: rgba(254, 242, 242, 0.95); color: #991B1B; border: 1px solid #FEE2E2; }
        .alert-success { background: rgba(240, 253, 244, 0.95); color: #166534; border: 1px solid #DCFCE7; }

        @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }

        /* =========================================
           1. HERO CARD (Capa e Perfil)
           ========================================= */
        .profile-hero {
            background: var(--surface);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-soft);
            overflow: hidden;
            margin-bottom: 40px;
            position: relative;
        }

        /* Banner */
        .hero-cover {
            height: 240px;
            background-size: cover; background-position: center;
            position: relative;
        }
        .hero-cover::before {
            content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: linear-gradient(to bottom, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.6) 100%);
        }

        /* Botão Editar Capa */
        .btn-upload-banner {
            position: absolute; top: 20px; right: 20px; z-index: 10;
            background: rgba(255,255,255,0.9); backdrop-filter: blur(5px);
            border: none; padding: 10px 18px; border-radius: 100px;
            font-weight: 700; font-size: 0.8rem; color: var(--primary);
            cursor: pointer; box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            display: flex; align-items: center; gap: 8px;
            transition: 0.3s;
        }
        .btn-upload-banner:hover { transform: translateY(-2px); background: white; color: var(--accent); }

        /* Conteúdo do Perfil */
        .hero-content {
            padding: 0 40px 40px 40px;
            margin-top: -90px;
            display: flex; flex-direction: column; align-items: center;
            position: relative; z-index: 5;
        }

        /* Avatar */
        .avatar-wrapper { position: relative; margin-bottom: 20px; }
        
        .avatar-circle {
            width: 170px; height: 170px;
            border-radius: 50%;
            border: 6px solid var(--surface);
            background: var(--surface);
            overflow: hidden;
            box-shadow: var(--shadow-soft);
        }
        .avatar-circle img { width: 100%; height: 100%; object-fit: cover; }

        .btn-edit-photo {
            position: absolute; bottom: 10px; right: 10px;
            width: 46px; height: 46px;
            background: var(--primary); color: white;
            border-radius: 50%;
            border: 4px solid var(--surface);
            display: flex; align-items: center; justify-content: center;
            cursor: pointer; transition: 0.3s;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .btn-edit-photo:hover { transform: scale(1.1) rotate(15deg); background: var(--accent); }

        /* Infos */
        .user-name { font-weight: 800; font-size: 2rem; color: var(--primary); margin: 0; line-height: 1.2; }
        .user-email { color: var(--text-muted); font-weight: 500; font-size: 1rem; margin-bottom: 12px; }
        
        .role-badge {
            background: var(--bg-body); color: var(--text-main);
            padding: 6px 16px; border-radius: 50px;
            font-size: 0.75rem; font-weight: 800;
            text-transform: uppercase; letter-spacing: 1px;
            display: inline-block; border: 1px solid var(--border-light);
        }
        .role-badge.vendor { background: #FEF2F2; color: #991B1B; border-color: #FECACA; }

        /* Logout Topo Direito */
        .logout-float {
            position: absolute; top: 20px; right: 20px; /* Relativo ao hero-content */
        }
        /* Mobile adjustment for logout */
        @media (max-width: 768px) {
            .logout-float { position: static; margin-top: 20px; width: 100%; }
            .btn-logout { width: 100%; justify-content: center; }
        }

        .btn-logout {
            background: #FAFAFA; color: var(--text-muted);
            border: 1px solid #E5E7EB; padding: 10px 20px;
            border-radius: 12px; font-weight: 700; font-size: 0.9rem;
            display: flex; align-items: center; gap: 8px;
            transition: 0.3s; cursor: pointer;
        }
        .btn-logout:hover { background: #FEF2F2; color: #DC2626; border-color: #FECACA; }

        /* =========================================
           2. GRID DE AÇÕES (Hub)
           ========================================= */
        .section-label {
            font-size: 0.8rem; font-weight: 800; text-transform: uppercase;
            color: var(--text-muted); letter-spacing: 1px; margin-bottom: 24px;
            display: flex; align-items: center; gap: 10px;
        }
        .section-label::after {
            content: ''; flex-grow: 1; height: 1px; background: var(--border-light);
        }

        .hub-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 50px;
        }

        .action-card {
            background: var(--surface);
            border-radius: var(--radius-lg);
            padding: 24px;
            display: flex; flex-direction: column; gap: 16px;
            border: 1px solid transparent;
            box-shadow: var(--shadow-soft);
            transition: all 0.3s ease;
            position: relative; overflow: hidden;
        }
        
        .action-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--shadow-float);
            border-color: rgba(0,0,0,0.05);
        }

        .card-icon {
            width: 50px; height: 50px;
            border-radius: 14px;
            background: #F8F9FA;
            color: var(--primary);
            display: flex; align-items: center; justify-content: center;
            font-size: 1.3rem; transition: 0.3s;
        }
        .action-card:hover .card-icon { background: var(--primary); color: white; }
        
        /* Highlight Card (Vendas/Pedidos) */
        .card-accent .card-icon { background: #FFF1F2; color: var(--accent); }
        .card-accent:hover .card-icon { background: var(--accent); color: white; }

        .card-title { font-weight: 800; font-size: 1rem; margin: 0; color: var(--primary); }
        .card-desc { font-size: 0.8rem; color: var(--text-muted); margin: 0; line-height: 1.4; }

        /* =========================================
           3. FORMULÁRIO (CARDS SEPARADOS)
           ========================================= */
        .form-grid-modern {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
        }

        .input-card {
            background: var(--surface);
            border-radius: var(--radius-lg);
            padding: 20px;
            box-shadow: var(--shadow-soft);
            border: 1px solid transparent;
            transition: 0.3s;
            display: flex; flex-direction: column;
        }
        .input-card:focus-within {
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .field-label {
            font-size: 0.75rem; font-weight: 800; text-transform: uppercase;
            color: var(--text-muted); margin-bottom: 8px; letter-spacing: 0.5px;
        }

        .field-input {
            width: 100%; border: none; background: transparent;
            font-weight: 700; font-size: 1.1rem; color: var(--primary);
            padding: 0; margin: 0; outline: none;
        }
        .field-input::placeholder { color: #D1D5DB; }
        
        /* Estilo especial para campos readonly */
        .input-card.readonly { background: #F9FAFB; opacity: 0.8; }
        .input-card.readonly .field-input { color: #6B7280; }

        /* Card especial para Vendedor */
        .vendor-card {
            background: #FEF2F2; /* Fundo vermelho bem claro */
            border: 1px dashed #FECACA;
        }
        .vendor-card .field-input { color: #991B1B; }
        .vendor-card .field-label { color: #DC2626; }

        /* Botão Salvar Flutuante ou Fixo */
        .save-bar {
            margin-top: 40px;
            background: var(--surface);
            padding: 20px;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-soft);
            display: flex; justify-content: space-between; align-items: center;
        }
        .save-info { font-size: 0.9rem; color: var(--text-muted); font-weight: 500; }
        
        .btn-save-modern {
            background: var(--primary); color: white;
            border: none; padding: 14px 32px;
            border-radius: 14px; font-weight: 800; font-size: 1rem;
            cursor: pointer; transition: 0.3s;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .btn-save-modern:hover { 
            background: var(--accent); transform: translateY(-2px); 
            box-shadow: 0 15px 30px rgba(227, 28, 37, 0.25);
        }

        /* Responsividade Extrema */
        @media (max-width: 576px) {
            .hero-content { padding: 0 20px 30px; margin-top: -60px; }
            .avatar-circle { width: 130px; height: 130px; }
            .user-name { font-size: 1.5rem; }
            .hub-grid { grid-template-columns: 1fr; gap: 15px; }
            .action-card { flex-direction: row; align-items: center; padding: 15px; }
            .card-icon { width: 40px; height: 40px; font-size: 1.1rem; }
            .save-bar { flex-direction: column; gap: 15px; text-align: center; }
            .btn-save-modern { width: 100%; }
        }
    </style>

    <!-- MENSAGENS FLUTUANTES -->
    <% if (messages.error) { %>
        <div class="alert-floating alert-error">
            <i class="fas fa-exclamation-circle"></i> <span><%= messages.error %></span>
        </div>
    <% } %>
    <% if (messages.success) { %>
        <div class="alert-floating alert-success">
            <i class="fas fa-check-circle"></i> <span><%= messages.success %></span>
        </div>
    <% } %>

    <div class="container">

        <!-- =========================================
             1. HERO SECTION (Capa & Avatar)
             ========================================= -->
        <div class="profile-hero">
            
            <% 
               let estiloBanner = '';
               if (usuario.banner_loja) {
                   estiloBanner = `background-image: url('/uploads/banners/${usuario.banner_loja}');`;
               } else {
                   // Gradiente padrão elegante
                   estiloBanner = `background: linear-gradient(135deg, #111 0%, #333 100%);`; 
               }
            %>

            <!-- Banner -->
            <div class="hero-cover" style="<%= estiloBanner %>">
                <form action="/perfil/atualizar" method="POST" enctype="multipart/form-data" id="formBanner">
                    <input type="hidden" name="nome" value="<%= usuario.nome %>">
                    <input type="hidden" name="tipo_update" value="banner">

                    <label for="input_banner" class="btn-upload-banner">
                        <i class="fas fa-image"></i> <span>Editar Capa</span>
                    </label>
                    <input type="file" name="banner_loja" id="input_banner" style="display: none;" accept="image/*" onchange="document.getElementById('formBanner').submit();">
                </form>
            </div>

            <!-- Conteúdo -->
            <div class="hero-content">
                <form action="/perfil/atualizar" method="POST" enctype="multipart/form-data" id="avatarForm">
                    <input type="hidden" name="nome" value="<%= usuario.nome %>">
                    
                    <div class="avatar-wrapper">
                        <div class="avatar-circle">
                            <% 
                                let foto = usuario.foto_perfil;
                                let src = '/images/default-avatar.png';
                                if (foto) src = `/uploads/perfil/${foto}`;
                            %>
                            <img src="<%= src %>" id="previewImg" onerror="this.src='https://ui-avatars.com/api/?name=<%= usuario.nome %>&background=000&color=FFF&bold=true'">
                        </div>
                        
                        <label for="foto_perfil" class="btn-edit-photo">
                            <i class="fas fa-camera"></i>
                            <input type="file" name="foto_perfil" id="foto_perfil" class="d-none" accept="image/*" onchange="document.getElementById('avatarForm').submit();">
                        </label>
                    </div>
                </form>

                <h1 class="user-name"><%= usuario.nome %></h1>
                <p class="user-email"><%= usuario.email %></p>
                
                <% if(usuario.tipo === 'vendedor') { %>
                    <span class="role-badge vendor">Loja Verificada</span>
                <% } else { %>
                    <span class="role-badge">Cliente</span>
                <% } %>

                <!-- Botão de Sair no Topo (Desktop) ou Abaixo (Mobile) -->
                <div class="logout-float">
                    <form action="/logout" method="POST" style="margin:0;">
                        <button type="submit" class="btn-logout">
                            <span>Sair</span> <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- =========================================
             2. HUB DE AÇÕES (Cards)
             ========================================= -->
        <div class="section-label">Acesso Rápido</div>
        
        <div class="hub-grid">
            
            <!-- Minha Conta (Para Todos) -->
            <a href="/meus-pedidos" class="action-card card-accent">
                <div class="card-icon"><i class="fas fa-box-open"></i></div>
                <div>
                    <h5 class="card-title">Meus Pedidos</h5>
                    <p class="card-desc">Rastrear compras</p>
                </div>
            </a>

            <a href="/carrinho" class="action-card">
                <div class="card-icon"><i class="fas fa-shopping-bag"></i></div>
                <div>
                    <h5 class="card-title">Carrinho</h5>
                    <p class="card-desc">Finalizar compra</p>
                </div>
            </a>

            <!-- Painel Vendedor (Condicional) -->
            <% if (usuario.tipo === 'vendedor') { %>
                <a href="/vendedor" class="action-card">
                    <div class="card-icon"><i class="fas fa-chart-pie"></i></div>
                    <div>
                        <h5 class="card-title">Dashboard</h5>
                        <p class="card-desc">Ver estatísticas</p>
                    </div>
                </a>
                <a href="/vendedor/produtos" class="action-card">
                    <div class="card-icon"><i class="fas fa-tags"></i></div>
                    <div>
                        <h5 class="card-title">Produtos</h5>
                        <p class="card-desc">Gerenciar estoque</p>
                    </div>
                </a>
            <% } %>

            <!-- Painel Admin (Condicional) -->
            <% if (usuario.tipo === 'admin') { %>
                <a href="/admin" class="action-card" style="border-color: #fee2e2;">
                    <div class="card-icon" style="color:#dc2626; background:#fef2f2;"><i class="fas fa-shield-alt"></i></div>
                    <div>
                        <h5 class="card-title" style="color:#dc2626;">Administração</h5>
                        <p class="card-desc">Controle total</p>
                    </div>
                </a>
            <% } %>

        </div>

        <!-- =========================================
             3. FORMULÁRIO DE EDIÇÃO (CARDS SEPARADOS)
             ========================================= -->
        <div class="section-label">Dados Pessoais</div>

        <form action="/perfil/atualizar" method="POST" enctype="multipart/form-data">
            
            <div class="form-grid-modern">
                
                <!-- Nome -->
                <div class="input-card">
                    <label class="field-label"><i class="far fa-user me-1"></i> Nome Completo</label>
                    <input type="text" name="nome" class="field-input" value="<%= usuario.nome %>" required>
                </div>

                <!-- Email (Readonly) -->
                <div class="input-card readonly">
                    <label class="field-label"><i class="far fa-envelope me-1"></i> Email (Fixo)</label>
                    <input type="email" class="field-input" value="<%= usuario.email %>" disabled>
                </div>

                <!-- Telefone -->
                <div class="input-card">
                    <label class="field-label"><i class="fas fa-phone-alt me-1"></i> Telefone / WhatsApp</label>
                    <input type="tel" name="telefone" class="field-input" value="<%= usuario.telefone || '' %>" placeholder="+244 9XX XXX XXX">
                </div>

                <!-- Dados Específicos de Vendedor -->
                <% if (usuario.tipo === 'vendedor') { %>
                    
                    <div class="input-card vendor-card">
                        <label class="field-label"><i class="fas fa-store me-1"></i> Nome da Loja</label>
                        <input type="text" name="nome_loja" class="field-input" value="<%= usuario.nome_loja || '' %>" placeholder="Ex: Tech Store">
                    </div>

                    <div class="input-card vendor-card" style="grid-column: 1 / -1;">
                        <label class="field-label"><i class="fas fa-align-left me-1"></i> Descrição da Loja</label>
                        <textarea name="descricao_loja" class="field-input" rows="2" placeholder="Descreva sua loja em poucas palavras..."><%= usuario.descricao_loja || '' %></textarea>
                    </div>

                <% } %>

            </div>

            <!-- BARRA DE SALVAR -->
            <div class="save-bar">
                <div class="save-info">
                    <i class="fas fa-info-circle me-2"></i> Alterações são salvas imediatamente após clicar.
                </div>
                <button type="submit" class="btn-save-modern">
                    Salvar Alterações
                </button>
            </div>

        </form>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Preview Instantâneo da Foto
        document.getElementById('foto_perfil').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });

        // Fechar alertas automaticamente
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-floating');
            alerts.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateX(100%)';
                el.style.transition = 'all 0.5s ease';
                setTimeout(() => el.remove(), 500);
            });
        }, 4000);
    </script>