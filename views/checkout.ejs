    <style>
        /* CONFIGURAÇÕES GLOBAIS - FIGMA FEEL */
        :root {
            --bg: #F8F9FD;
            --primary: #0F0F0F;
            --accent: #8B0000;
            --accent-light: #FFEDED;
            --text-main: #1A1A1A;
            --text-dim: #64748B;
            --white: #FFFFFF;
            --radius-main: 16px;
            --shadow-lux: 0 20px 40px -10px rgba(0,0,0,0.05);
            --border: rgba(0, 0, 0, 0.04);
        }

        body {
            background-color: var(--bg);
            font-family: 'Raleway', sans-serif;
            color: var(--text-main);
            -webkit-font-smoothing: antialiased;
            overflow-x: hidden;
        }

        /* REMOVER SUBLINHADOS NAVBAR E LINKS */
        a, a:hover, .nav-link, button {
            text-decoration: none !important;
            color: inherit;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* CONTAINER MINIATURIZADO */
        .master-wrapper {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 15px;
        }

        .page-title {
            font-weight: 900;
            font-size: 1.8rem;
            letter-spacing: -1px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        /* CARDS PREMIUM */
        .glass-panel {
            background: var(--white);
            border-radius: var(--radius-main);
            border: 1px solid var(--border);
            box-shadow: var(--shadow-lux);
            padding: 24px;
            margin-bottom: 24px;
        }

        .section-label {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 18px;
            font-weight: 800;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--primary);
        }

        .icon-small { width: 28px; height: 28px; }

        /* INPUTS ESTILIZADOS */
        .form-group-lux { margin-bottom: 15px; }
        .label-lux {
            font-weight: 700;
            font-size: 0.75rem;
            color: var(--text-dim);
            margin-bottom: 6px;
            display: block;
        }

        .input-lux {
            width: 100%;
            border: 1.5px solid #F1F5F9;
            background: #F8FAFC;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--primary);
        }

        .input-lux:focus {
            outline: none;
            border-color: var(--accent);
            background: #FFF;
            box-shadow: 0 0 0 4px var(--accent-light);
        }

        /* MÉTODOS DE PAGAMENTO MINI */
        .payment-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

        .pay-card {
            position: relative;
            cursor: pointer;
        }

        .pay-card input { display: none; }

        .pay-box {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px;
            border-radius: 12px;
            border: 2px solid #F1F5F9;
            background: #FFF;
            transition: 0.2s;
        }

        .pay-card input:checked + .pay-box {
            border-color: var(--accent);
            background: var(--accent-light);
        }

        .pay-box span { font-weight: 700; font-size: 0.85rem; }

        /* VENDEDORES E ITENS (MATRIZ 3x3) */
        .vendor-tag {
            background: var(--primary);
            color: #fff;
            padding: 4px 12px;
            border-radius: 50px;
            font-size: 0.7rem;
            font-weight: 800;
            margin-bottom: 15px;
            display: inline-block;
        }

        .order-matrix {
            display: grid;
            grid-template-columns: 1fr; /* Desktop List */
            gap: 10px;
        }

        .mini-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-radius: 10px;
            background: #FDFDFD;
            border: 1px solid #F1F5F9;
        }

        .mini-item-name {
            font-weight: 700;
            font-size: 0.85rem;
            margin: 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
        }

        .mini-item-price {
            font-weight: 800;
            color: var(--accent);
            font-size: 0.85rem;
        }

        /* SUMMARY SIDEBAR MINI */
        .summary-mini {
            position: sticky;
            top: 20px;
            background: var(--primary);
            color: #fff;
            border-radius: var(--radius-main);
            padding: 30px;
            text-align: center;
        }

        .total-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            opacity: 0.5;
            margin-bottom: 8px;
            display: block;
        }

        .total-amount {
            font-size: 2.2rem;
            font-weight: 900;
            margin-bottom: 25px;
            display: block;
        }

        .btn-confirm-lux {
            width: 100%;
            background: var(--accent);
            color: #fff;
            border: none;
            padding: 16px;
            border-radius: 12px;
            font-weight: 800;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            box-shadow: 0 10px 20px rgba(139, 0, 0, 0.3);
        }

        .btn-confirm-lux:hover {
            transform: translateY(-2px);
            background: #A00000;
        }

        /* RESPONSIVIDADE 3x3 */
        @media (max-width: 600px) {
            .order-matrix {
                grid-template-columns: repeat(3, 1fr) !important;
                gap: 8px;
            }

            .mini-item {
                flex-direction: column;
                text-align: center;
                padding: 8px 4px;
                min-height: 100px;
                justify-content: center;
            }

            .mini-item-name {
                font-size: 0.65rem;
                max-width: 100%;
                white-space: normal;
                height: 30px;
                line-height: 1.2;
                margin-bottom: 5px;
            }

            .mini-item-price { font-size: 0.7rem; }
            .payment-grid { grid-template-columns: 1fr; }
            .master-wrapper { margin: 20px auto; }
            .page-title { font-size: 1.4rem; justify-content: center; }
        }
    </style>


    <div class="master-wrapper">
        <h1 class="page-title">
            <img src="https://img.icons8.com/?size=100&id=lMhEFosNBRbT&format=png&color=000000" class="icon-small" alt="">
            Finalizar Pedido
        </h1>

        <div class="row g-4">
            <div class="col-lg-7">
                <form id="form-checkout">
                    
                    <!-- ENDEREÇO -->
                    <div class="glass-panel">
                        <div class="section-label">
                            <img src="https://img.icons8.com/3d-fluency/94/marker.png" class="icon-small" alt="">
                            Destino da Entrega
                        </div>
                        
                        <div class="form-group-lux">
                            <label class="label-lux">MORADA COMPLETA</label>
                            <textarea class="input-lux" name="endereco" rows="2" required placeholder="Província, Rua, Número da Casa..."></textarea>
                        </div>
                        <div class="form-group-lux">
                            <label class="label-lux">PONTO DE REFERÊNCIA (OPCIONAL)</label>
                            <input type="text" class="input-lux" name="observacoes" placeholder="Ex: Ao lado da padaria">
                        </div>
                    </div>

                    <!-- PAGAMENTO -->
                    <div class="glass-panel">
                        <div class="section-label">
                            <img src="https://img.icons8.com/3d-fluency/94/card-wallet.png" class="icon-small" alt="">
                            Forma de Pagamento
                        </div>
                        
                        <div class="payment-grid">
                            <label class="pay-card">
                                <input type="radio" name="metodo_pagamento" value="Transferencia" checked>
                                <div class="pay-box">
                                    <img src="https://img.icons8.com/3d-fluency/94/bank.png" width="24" alt="">
                                    <span>Transferência</span>
                                </div>
                            </label>

                            <label class="pay-card">
                                <input type="radio" name="metodo_pagamento" value="Numerario">
                                <div class="pay-box">
                                    <img src="https://img.icons8.com/3d-fluency/94/money.png" width="24" alt="">
                                    <span>No ato da entrega</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- REVISÃO MINIATURIZADA -->
                    <div class="glass-panel">
                        <div class="section-label">
                            <img src="https://img.icons8.com/3d-fluency/94/shopping-basket.png" class="icon-small" alt="">
                            Itens Comprados
                        </div>

                        <% pedidosPorVendedor.forEach(grupo => { %>
                            <div class="mb-4">
                                <div class="vendor-tag"><%= grupo.vendedor_nome %></div>
                                <div class="order-matrix">
                                    <% grupo.itens.forEach(item => { %>
                                        <div class="mini-item">
                                            <div class="text-start">
                                                <h6 class="mini-item-name"><%= item.nome %></h6>
                                                <div style="font-size: 0.65rem; opacity: 0.6; font-weight: 700;">QTD: <%= item.quantidade %></div>
                                            </div>
                                            <div class="mini-item-price">
                                                <%= (item.preco * item.quantidade).toLocaleString() %> Kz
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </form>
            </div>

            <!-- SIDEBAR TOTAL -->
            <div class="col-lg-5">
                <div class="summary-mini">
                    <span class="total-label">Subtotal Geral</span>
                    <span class="total-amount"><%= totalGeral.toLocaleString() %> <small style="font-size: 14px;">Kz</small></span>
                    
                    <div class="mb-4 text-start" style="font-size: 0.8rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 15px;">
                        <div class="d-flex justify-content-between mb-2">
                            <span style="opacity: 0.6;">Total de Itens:</span>
                            <span><%= totalItens %></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span style="opacity: 0.6;">Entrega:</span>
                            <span class="text-success fw-bold">A Combinar</span>
                        </div>
                    </div>

                    <button type="button" onclick="finalizarCompra()" class="btn-confirm-lux">
                        <span>CONFIRMAR PEDIDO</span>
                        <img src="https://img.icons8.com/3d-fluency/94/checked.png" width="22" alt="">
                    </button>

                    <a href="/carrinho" class="d-inline-block mt-4" style="font-size: 0.7rem; font-weight: 800; opacity: 0.5; letter-spacing: 1px;">
                        MODIFICAR CARRINHO
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- SCRIPT DE FINALIZAÇÃO -->
    <script>
        async function finalizarCompra() {
            const form = document.getElementById('form-checkout');
            const endereco = form.querySelector('[name="endereco"]').value;

            if (!endereco) {
                Swal.fire({
                    icon: 'error',
                    title: 'Falta o endereço',
                    text: 'Precisamos saber onde entregar seus produtos.',
                    confirmButtonColor: '#8B0000'
                });
                return;
            }

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            Swal.fire({
                title: 'Processando...',
                background: '#fff',
                didOpen: () => { Swal.showLoading() }
            });

            try {
                const response = await fetch('/finalizar-compra', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Pedido Realizado!',
                        confirmButtonText: 'Ver Meus Pedidos',
                        confirmButtonColor: '#0F0F0F'
                    }).then(() => {
                        window.location.href = '/meus-pedidos';
                    });
                } else {
                    Swal.fire('Erro', result.message || 'Erro inesperado.', 'error');
                }
            } catch (err) {
                console.error(err);
                Swal.fire('Erro', 'Conexão falhou.', 'error');
            }
        }
    </script>