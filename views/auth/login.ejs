<!DOCTYPE html>
<html lang="pt-AO">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Login - KuandaShop</title>
  
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <style>
    /* =========================================
       KUANDA PREMIUM LOGIN STYLE
       ========================================= */
    :root {
      --k-red: #E31C25;
      --k-black: #0F0F0F;
      --glass-bg: rgba(255, 255, 255, 0.95);
      --glass-border: 1px solid rgba(255, 255, 255, 0.8);
    }

    body {
      font-family: 'Plus Jakarta Sans', sans-serif;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      background-color: #FAFAFA;
    }

    /* Fundo Moderno */
    .auth-wrapper {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      background: radial-gradient(circle at 10% 20%, rgba(227, 28, 37, 0.05) 0%, transparent 40%),
                  radial-gradient(circle at 90% 80%, rgba(255, 193, 7, 0.1) 0%, transparent 40%);
    }

    /* O Card de Login (Glassmorphism) */
    .auth-card {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: var(--glass-border);
      border-radius: 32px;
      box-shadow: 0 20px 60px -10px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 450px;
      overflow: hidden;
      position: relative;
    }

    /* Logo Animado */
    .brand-logo-circle {
      width: 60px; height: 60px;
      background: linear-gradient(135deg, #E31C25, #B01018);
      color: white; font-size: 1.8rem; font-weight: 800;
      display: flex; align-items: center; justify-content: center;
      border-radius: 20px; margin: 0 auto 20px;
      box-shadow: 0 10px 20px rgba(227, 28, 37, 0.3);
      animation: float 6s ease-in-out infinite;
    }
    @keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-8px); } }

    /* Inputs Estilizados */
    .custom-input-group {
      background: #F3F4F6;
      border-radius: 16px;
      border: 2px solid transparent;
      padding: 5px;
      display: flex; align-items: center;
      transition: all 0.3s ease;
      margin-bottom: 20px;
    }

    .custom-input-group:focus-within {
      background: #FFFFFF;
      border-color: #E31C25;
      box-shadow: 0 0 0 4px rgba(227, 28, 37, 0.1);
    }

    .input-icon {
      width: 50px; text-align: center; color: #9CA3AF; font-size: 1.1rem;
    }
    .custom-input-group:focus-within .input-icon { color: #E31C25; }

    .form-control-custom {
      border: none; background: transparent; height: 45px; width: 100%;
      color: #1F2937; font-weight: 500; outline: none; padding-right: 15px;
    }

    /* Botão Toggle Password */
    .btn-toggle {
      border: none; background: transparent; color: #9CA3AF; padding: 0 15px; cursor: pointer;
    }
    .btn-toggle:hover { color: #333; }

    /* Botão Entrar */
    .btn-submit {
      width: 100%; padding: 15px; border-radius: 16px;
      background: #0F0F0F; color: white; font-weight: 700; font-size: 1rem;
      border: none; transition: all 0.3s; margin-top: 10px;
    }
    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      background: #222;
    }

    /* Labels */
    .form-label-custom {
      font-size: 0.85rem; font-weight: 700; color: #6B7280; margin-bottom: 8px; display: block; margin-left: 5px;
    }

    /* Animação de Entrada */
    .fade-in-up { animation: fadeInUp 0.8s cubic-bezier(0.2, 1, 0.3, 1) forwards; opacity: 0; transform: translateY(20px); }
    @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }
  </style>
</head>
<body>

<div class="auth-wrapper">
  <div class="auth-card">
    <div class="card-body p-5">
      
      <!-- Cabeçalho (Design) -->
      <div class="text-center mb-5 fade-in-up">
        <div class="brand-logo-circle">K</div>
        <h2 class="fw-bold text-dark mb-1">Entrar</h2>
        <p class="text-muted small">Acesse sua conta no KuandaShop</p>
      </div>

      <!-- FORMULÁRIO ORIGINAL (FUNCIONALIDADE PRESERVADA) -->
      <form action="/login" method="POST" class="fade-in-up" style="animation-delay: 0.1s;">
        
        <!-- Campo Email -->
        <div class="mb-3">
          <label for="email" class="form-label-custom">EMAIL</label>
          <div class="custom-input-group">
            <span class="input-icon"><i class="fas fa-envelope"></i></span>
            <input type="email" class="form-control-custom" id="email" name="email" required placeholder="exemplo@email.com">
          </div>
        </div>

        <!-- Campo Senha -->
        <div class="mb-4">
          <label for="senha" class="form-label-custom">SENHA</label>
          <div class="custom-input-group">
            <span class="input-icon"><i class="fas fa-lock"></i></span>
            <input type="password" class="form-control-custom" id="senha" name="senha" required placeholder="••••••••">
            <button class="btn-toggle" type="button" id="togglePassword">
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>

        <!-- Botão Submit -->
        <button type="submit" class="btn-submit mb-4">
          <i class="fas fa-sign-in-alt me-2"></i>Entrar
        </button>

        <!-- Link Registro -->
        <div class="text-center">
          <p class="mb-0 text-muted small">
            Não tem uma conta? 
            <a href="/registro" class="text-danger fw-bold text-decoration-none">Registre-se aqui</a>
          </p>
        </div>

      </form>
    </div>
  </div>
</div>

<!-- SCRIPTS ORIGINAIS (MANTIDOS) -->
<script>
  // Toggle password visibility (Exatamente como pediu)
  document.getElementById('togglePassword').addEventListener('click', function() {
    const passwordInput = document.getElementById('senha');
    const icon = this.querySelector('i');
    
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
      icon.classList.remove('fa-eye');
      icon.classList.add('fa-eye-slash');
      this.style.color = '#E31C25'; // Adicionei só uma corzinha quando ativo
    } else {
      passwordInput.type = 'password';
      icon.classList.remove('fa-eye-slash');
      icon.classList.add('fa-eye');
      this.style.color = '#9CA3AF';
    }
  });

  // Form validation (Exatamente como pediu)
  document.querySelector('form').addEventListener('submit', function(e) {
    const email = document.getElementById('email').value;
    const senha = document.getElementById('senha').value;

    if (!email || !senha) {
      e.preventDefault();
      alert('Por favor, preencha todos os campos.');
      return;
    }

    if (!email.includes('@')) {
      e.preventDefault();
      alert('Por favor, insira um email válido.');
      return;
    }
    
    // Pequeno feedback visual no botão ao enviar (sem travar lógica)
    const btn = this.querySelector('button[type="submit"]');
    btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Acessando...';
    btn.style.opacity = '0.8';
  });
</script>

</body>
</html>