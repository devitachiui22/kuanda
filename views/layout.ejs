  <script>
    // ========================
    // LOGICA DO CARRINHO
    // ========================
    const CartManager = {
        updateCount() {
            fetch('/carrinho/quantidade')
                .then(r => r.json())
                .then(d => {
                    if(d.success) {
                        ['deskCartCount', 'mobileCartCount'].forEach(id => {
                            const el = document.getElementById(id);
                            if(el) {
                                el.textContent = d.quantidade;
                                el.style.display = d.quantidade > 0 ? 'inline-block' : 'none';
                            }
                        });
                    }
                })
                .catch(e => console.error(e));
        },
        async add(id, name) {
            // Feedback Visual
            const toast = document.createElement('div');
            toast.className = 'toast show align-items-center text-white bg-success border-0 position-fixed top-0 end-0 m-3';
            toast.style.zIndex = '3000';
            toast.innerHTML = `<div class="d-flex"><div class="toast-body"><i class="fas fa-check me-2"></i> ${name} adicionado!</div></div>`;
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 2500);

            try {
                await fetch('/carrinho/adicionar', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `produto_id=${id}&quantidade=1`
                });
                this.updateCount();
            } catch(e) { console.error(e); }
        },
        init() {
            this.updateCount();
            setInterval(() => this.updateCount(), 15000);
        }
    };

    window.addToCart = (id, name) => CartManager.add(id, name);
    
    document.addEventListener('DOMContentLoaded', () => {
        CartManager.init();
        
        // Auto-scroll Navbar
        window.addEventListener('scroll', () => {
            const nav = document.getElementById('desktopNav');
            if(nav) window.scrollY > 50 ? nav.classList.add('scrolled') : nav.classList.remove('scrolled');
        });

        // Auto-dismiss toasts existentes
        setTimeout(() => {
            document.querySelectorAll('.toast').forEach(t => t.remove());
        }, 4000);

        // Scroll Footer Drag
        const slider = document.querySelector('.gf-scroll-wrapper');
        if(slider) {
            let isDown = false; let startX; let scrollLeft;
            slider.addEventListener('mousedown', (e) => { isDown = true; startX = e.pageX - slider.offsetLeft; scrollLeft = slider.scrollLeft; });
            slider.addEventListener('mouseleave', () => { isDown = false; });
            slider.addEventListener('mouseup', () => { isDown = false; });
            slider.addEventListener('mousemove', (e) => { if (!isDown) return; e.preventDefault(); const x = e.pageX - slider.offsetLeft; const walk = (x - startX) * 2; slider.scrollLeft = scrollLeft - walk; });
        }
    });
  </script>
