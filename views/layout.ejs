  <script>
    // ========================
    // GERENCIADOR DE CARRINHO
    // ========================
    const CartManager = {
        updateCount() {
            fetch('/carrinho/quantidade')
                .then(r => r.json())
                .then(d => {
                    if(d.success) {
                        ['deskCartCount', 'mobileCartCount'].forEach(id => {
                            const el = document.getElementById(id);
                            if(el) {
                                el.textContent = d.quantidade;
                                el.style.display = d.quantidade > 0 ? 'inline-block' : 'none';
                            }
                        });
                    }
                })
                .catch(e => console.error(e));
        },
        async add(id, name) {
            // Criação manual do toast para evitar dependência de modais/bibliotecas
            const toast = document.createElement('div');
            toast.className = 'toast show align-items-center text-white bg-success border-0 position-fixed top-0 end-0 m-3 shadow-lg';
            toast.style.zIndex = '3000';
            toast.style.pointerEvents = 'auto'; // Garante que o toast seja clicável/fechável
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body fw-bold">
                        <i class="fas fa-check-circle me-2"></i> ${name} adicionado!
                    </div>
                </div>`;
            document.body.appendChild(toast);
            
            // Remove após 2.5 segundos
            setTimeout(() => {
                toast.style.transition = "opacity 0.5s ease";
                toast.style.opacity = "0";
                setTimeout(() => toast.remove(), 500);
            }, 2500);

            try {
                await fetch('/carrinho/adicionar', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `produto_id=${id}&quantidade=1`
                });
                this.updateCount();
            } catch(e) { console.error(e); }
        },
        init() {
            this.updateCount();
            // Atualiza a cada 30 segundos para não sobrecarregar
            setInterval(() => this.updateCount(), 30000);
        }
    };

    // Torna global para uso nos botões de produto
    window.addToCart = (id, name) => CartManager.add(id, name);
    
    document.addEventListener('DOMContentLoaded', () => {
        CartManager.init();
        
        // Efeito de Glass na Navbar ao rolar
        window.addEventListener('scroll', () => {
            const nav = document.getElementById('desktopNav');
            if(nav) {
                if (window.scrollY > 50) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            }
        });

        // Limpeza automática de mensagens flash existentes
        setTimeout(() => {
            document.querySelectorAll('.toast').forEach(t => {
                t.style.transition = "opacity 0.5s";
                t.style.opacity = "0";
                setTimeout(() => t.remove(), 500);
            });
        }, 4000);

        // Lógica de "Drag to Scroll" para o Footer (Mouse)
        const slider = document.querySelector('.gf-scroll-wrapper');
        if(slider) {
            let isDown = false;
            let startX;
            let scrollLeft;

            slider.addEventListener('mousedown', (e) => {
                isDown = true;
                slider.style.cursor = 'grabbing';
                startX = e.pageX - slider.offsetLeft;
                scrollLeft = slider.scrollLeft;
            });
            slider.addEventListener('mouseleave', () => {
                isDown = false;
                slider.style.cursor = 'grab';
            });
            slider.addEventListener('mouseup', () => {
                isDown = false;
                slider.style.cursor = 'grab';
            });
            slider.addEventListener('mousemove', (e) => {
                if (!isDown) return;
                e.preventDefault();
                const x = e.pageX - slider.offsetLeft;
                const walk = (x - startX) * 2; // Velocidade do scroll
                slider.scrollLeft = scrollLeft - walk;
            });
        }
    });
  </script>
