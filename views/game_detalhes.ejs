<!-- FontAwesome (Caso não esteja no seu layout principal) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* =========================================
    KUANDA GAME STUDIO - PREMIUM THEME (DARK & NEON)
    ========================================= */
    :root { 
        --kg-bg: #09090b; 
        --kg-panel: #131316; 
        --kg-accent: #E31C25; 
        --kg-neon: #00f2ea; 
        --kg-text: #e4e4e7;
        --kg-card-glow: rgba(227, 28, 37, 0.15);
        --transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    * { box-sizing: border-box; }
    a { text-decoration: none; color: inherit; }

    body { 
        background: var(--kg-bg); 
        color: var(--kg-text); 
        font-family: 'Inter', system-ui, -apple-system, sans-serif; 
        margin: 0; 
        overflow-x: hidden;
        line-height: 1.6;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    /* BACKDROP CINEMÁTICO */
    .backdrop {
        position: absolute; width: 100%; height: 70vh; z-index: -1; top: 0; left: 0;
        mask-image: linear-gradient(to bottom, black 0%, transparent 100%);
        -webkit-mask-image: linear-gradient(to bottom, black 0%, transparent 100%);
        pointer-events: none;
    }
    .backdrop img { width: 100%; height: 100%; object-fit: cover; opacity: 0.2; filter: blur(20px) saturate(120%); }

    /* LAYOUT PRINCIPAL */
    .container-main { 
        max-width: 1300px; 
        margin: 0 auto; 
        padding: 120px 25px 100px; /* Padding bottom extra para mobile bar */
        display: grid; 
        grid-template-columns: 1.8fr 1fr; 
        gap: 50px;
        flex: 1;
        position: relative;
    }

    /* MEDIA & GALLERY */
    .media-box { 
        background: #000; aspect-ratio: 16/9; border-radius: 20px; 
        overflow: hidden; border: 1px solid rgba(255,255,255,0.08); 
        margin-bottom: 25px; position: relative;
        box-shadow: 0 30px 60px rgba(0,0,0,0.5);
        animation: fadeIn 0.8s ease-out;
    }
    .media-box iframe, .media-box img { width: 100%; height: 100%; object-fit: cover; border: none; }
    
    .thumbs { display: flex; gap: 10px; overflow-x: auto; padding: 5px 0 15px; scrollbar-width: none; mask-image: linear-gradient(to right, black 90%, transparent 100%); -webkit-mask-image: linear-gradient(to right, black 90%, transparent 100%); }
    .thumbs::-webkit-scrollbar { display: none; }
    .thumb { 
        flex: 0 0 100px; height: 60px; border-radius: 10px; cursor: pointer; 
        opacity: 0.5; transition: var(--transition); object-fit: cover; 
        border: 2px solid transparent; filter: grayscale(40%);
    }
    .thumb:hover { opacity: 1; border-color: var(--kg-neon); filter: grayscale(0); transform: translateY(-3px); }

    /* TYPOGRAPHY */
    h1, h2, h3, h4 { font-weight: 900; letter-spacing: -0.5px; text-transform: uppercase; margin: 0; }
    .section-title { font-size: 1.2rem; color: #fff; margin-bottom: 20px; display: flex; align-items: center; gap: 10px; opacity: 0.9; }
    .section-title::after { content: ''; flex-grow: 1; height: 1px; background: linear-gradient(to right, rgba(227,28,37,0.3), transparent); }

    /* DOWNLOAD SECTION (Visual Cards) */
    .dl-section { margin-top: 40px; animation: fadeInUp 0.8s ease-out; }
    .dl-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 12px; margin-top: 15px; }
    
    .dl-card {
        background: var(--kg-panel); padding: 16px; border-radius: 14px;
        display: flex; align-items: center; justify-content: space-between;
        transition: var(--transition); border: 1px solid rgba(255,255,255,0.05);
        position: relative; overflow: hidden;
        text-decoration: none; cursor: pointer;
    }
    .dl-card::before {
        content: ''; position: absolute; top: 0; left: 0; width: 3px; height: 100%;
        background: var(--kg-accent); opacity: 0.5;
    }
    .dl-card:hover { 
        background: #1c1c21; border-color: var(--kg-accent); 
        transform: scale(1.02); box-shadow: 0 10px 30px var(--kg-card-glow);
    }
    .dl-info .dl-label { font-weight: 800; font-size: 0.95rem; color: #fff; display: block; }
    .dl-info .dl-sub { font-size: 0.65rem; font-weight: 600; color: var(--kg-accent); text-transform: uppercase; letter-spacing: 1px; }
    .dl-icon { width: 36px; height: 36px; background: rgba(255,255,255,0.05); border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 1rem; transition: 0.3s; color: var(--kg-text); }
    .dl-card:hover .dl-icon { background: var(--kg-accent); color: #fff; transform: rotate(-10deg); }

    /* STATUS BOXES (Pending/Locked) */
    .status-box {
        padding: 40px; border-radius: 18px; text-align: center;
        background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
    }
    .status-box i { margin-bottom: 15px; display: block; }
    .status-btn {
        display: inline-block; margin-top: 20px; padding: 12px 30px; border-radius: 50px;
        font-weight: 800; text-transform: uppercase; letter-spacing: 1px;
        border: none; cursor: pointer; transition: 0.3s;
    }

    /* REQUIREMENTS */
    .req-card {
        background: linear-gradient(145deg, #131316 0%, #09090b 100%);
        padding: 25px; border-radius: 18px; margin-top: 30px;
        border: 1px solid rgba(255,255,255,0.03); position: relative;
    }
    .req-grid { display: grid; grid-template-columns: 1fr; gap: 15px; margin-top: 15px; }
    .req-item { 
        background: rgba(255,255,255,0.02); padding: 12px; border-radius: 10px;
        display: flex; gap: 12px; align-items: center; border-left: 2px solid #333;
    }
    .req-item i { color: var(--kg-neon); font-size: 1.1rem; width: 20px; }
    .req-item strong { color: #fff; font-size: 0.9rem; display: block; white-space: pre-line; }

    /* SIDEBAR (Desktop) */
    .sidebar { position: sticky; top: 100px; animation: fadeInRight 0.8s ease-out; height: fit-content; }
    .cover-box { position: relative; margin-bottom: 25px; }
    .cover { 
        width: 100%; border-radius: 18px; box-shadow: 0 20px 50px rgba(0,0,0,0.8); 
        border: 1px solid rgba(255,255,255,0.1); aspect-ratio: 2/3; object-fit: cover;
    }
    .floating-badges { position: absolute; bottom: 12px; left: 12px; display: flex; gap: 6px; flex-wrap: wrap; }
    .badge-game { 
        background: rgba(0,0,0,0.8); backdrop-filter: blur(10px); color: #fff; 
        padding: 4px 10px; border-radius: 6px; font-size: 0.65rem; font-weight: 800; 
        border: 1px solid rgba(255,255,255,0.1); 
    }

    .price-container { margin: 20px 0; }
    .price-label { font-size: 0.75rem; color: #888; text-transform: uppercase; font-weight: 700; margin-bottom: 4px; display: block; }
    .price-value { font-size: 2.5rem; font-weight: 900; color: #fff; line-height: 1; letter-spacing: -1px; }
    .price-free { color: var(--kg-neon); }

    /* BOTÕES DESKTOP */
    .btn-action {
        width: 100%; padding: 18px; border-radius: 14px; font-weight: 900; 
        text-transform: uppercase; border: none; cursor: pointer; font-size: 1rem;
        transition: var(--transition); letter-spacing: 0.5px; display: flex; align-items: center; justify-content: center; gap: 10px;
    }
    .btn-buy { background: var(--kg-accent); color: white; box-shadow: 0 10px 30px rgba(227, 28, 37, 0.3); }
    .btn-buy:hover { transform: translateY(-3px); box-shadow: 0 15px 40px rgba(227, 28, 37, 0.5); }
    .btn-free { background: var(--kg-neon); color: #000; box-shadow: 0 10px 30px rgba(0, 242, 234, 0.2); }
    .btn-free:hover { transform: translateY(-3px); box-shadow: 0 15px 40px rgba(0, 242, 234, 0.4); }

    /* MOBILE STICKY BAR */
    .mobile-sticky-bar {
        position: fixed; bottom: 0; left: 0; width: 100%;
        background: rgba(15, 15, 15, 0.9);
        backdrop-filter: blur(15px); -webkit-backdrop-filter: blur(15px);
        padding: 15px 20px 25px;
        z-index: 1000;
        border-top: 1px solid rgba(255,255,255,0.1);
        display: none;
        align-items: center; justify-content: space-between;
        box-shadow: 0 -10px 30px rgba(0,0,0,0.5);
        animation: slideUp 0.5s ease-out;
    }

    .mobile-price-group { display: flex; flex-direction: column; }
    .mpg-label { font-size: 0.7rem; color: #888; text-transform: uppercase; font-weight: 700; }
    .mpg-value { font-size: 1.4rem; font-weight: 900; color: white; line-height: 1.1; }
    
    .btn-mobile-buy {
        background: var(--kg-accent); color: white; border: none;
        padding: 12px 30px; border-radius: 50px; font-weight: 800;
        font-size: 0.9rem; letter-spacing: 0.5px;
        box-shadow: 0 5px 20px rgba(227, 28, 37, 0.4); cursor: pointer;
    }

    /* ANIMATIONS */
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    @keyframes fadeInRight { from { opacity: 0; transform: translateX(20px); } to { opacity: 1; transform: translateX(0); } }
    @keyframes slideUp { from { transform: translateY(100%); } to { transform: translateY(0); } }

    /* RESPONSIVIDADE */
    @media(max-width: 950px) { 
        .container-main { 
            grid-template-columns: 1fr; 
            padding: 85px 20px 140px; 
            gap: 30px;
        } 
        .sidebar { display: none; }
        
        /* Mobile Header */
        .mobile-header-info { display: block !important; margin-bottom: 20px; animation: fadeIn 0.8s; }
        .mhi-flex { display: flex; align-items: center; gap: 15px; }
        .mhi-cover { width: 80px; height: 110px; border-radius: 8px; object-fit: cover; box-shadow: 0 5px 15px rgba(0,0,0,0.5); border: 1px solid rgba(255,255,255,0.2); }
        .mhi-title { font-size: 1.4rem; line-height: 1.1; margin-bottom: 5px; }
        .mhi-meta { font-size: 0.75rem; color: #aaa; display: flex; gap: 10px; }
        .mhi-meta i { color: var(--kg-neon); }

        .mobile-sticky-bar { display: flex; }
        .dl-grid { grid-template-columns: 1fr; } 
    }

    @media(min-width: 951px) {
        .mobile-header-info { display: none !important; }
        .mobile-sticky-bar { display: none !important; }
    }
</style>

<!-- BACKDROP DINÂMICO -->
<div class="backdrop">
    <img src="<%= jogo.banner ? '/uploads/games/' + jogo.banner : '/uploads/games/' + jogo.capa %>" alt="Backdrop">
</div>

<div class="container-main">
    
    <!-- HEADER EXCLUSIVO MOBILE -->
    <div class="mobile-header-info">
        <div class="mhi-flex">
            <img src="/uploads/games/<%= jogo.capa %>" class="mhi-cover" alt="Cover">
            <div>
                <h1 class="mhi-title"><%= jogo.titulo %></h1>
                <div class="mhi-meta">
                    <span><i class="fas fa-gamepad"></i> <%= jogo.plataforma %></span>
                    <span><i class="fas fa-calendar"></i> <%= new Date(jogo.created_at).getFullYear() %></span>
                </div>
                <div style="margin-top: 8px;">
                    <span class="badge bg-dark border border-secondary text-muted" style="font-size: 0.65rem; border-radius: 4px; padding: 2px 6px;">Verificado</span>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTEÚDO PRINCIPAL -->
    <main>
        <!-- Título Desktop -->
        <h1 class="d-none d-lg-block" style="margin-bottom: 25px; font-size: 2.8rem;"><%= jogo.titulo %></h1>
        
        <!-- PLAYER DE VÍDEO -->
        <div class="media-box" id="mainDisplay">
            <% 
                let videoId = null;
                if (jogo.trailer_url) {
                    if (jogo.trailer_url.includes('v=')) {
                        videoId = jogo.trailer_url.split('v=')[1].split('&')[0];
                    } else if (jogo.trailer_url.includes('youtu.be/')) {
                        videoId = jogo.trailer_url.split('youtu.be/')[1].split('?')[0];
                    }
                }
            %>
            <% if (videoId) { %>
                <iframe src="https://www.youtube.com/embed/<%= videoId %>?rel=0&showinfo=0&autoplay=0" allowfullscreen></iframe>
            <% } else { %>
                <img src="/uploads/games/<%= jogo.capa %>" alt="Capa Principal">
            <% } %>
        </div>

        <!-- GALERIA DE SCREENSHOTS -->
        <% if (jogo.screenshots && jogo.screenshots.length > 0) { %>
            <div class="thumbs">
                <% if (videoId) { %>
                    <div class="thumb" onclick="location.reload()" style="display:flex; align-items:center; justify-content:center; background:#111; border: 1px solid #333">
                        <i class="fas fa-play fa-lg text-white"></i>
                    </div>
                <% } %>
                <% jogo.screenshots.forEach(src => { %>
                    <img src="/uploads/games/<%= src %>" class="thumb" onclick="verImagem('/uploads/games/<%= src %>')" alt="Screenshot">
                <% }) %>
            </div>
        <% } %>

        <!-- DESCRIÇÃO -->
        <div style="margin-top: 30px; animation: fadeInUp 0.6s ease-out;">
            <div class="section-title">
                <i class="fa-solid fa-circle-info text-danger"></i> Visão Geral
            </div>
            <p style="white-space: pre-line; margin-bottom: 0; color: #a1a1aa;">
                <%= jogo.descricao || 'Nenhuma descrição detalhada disponível.' %>
            </p>
        </div>

        <!-- ÁREA DE DOWNLOADS COM LÓGICA DE ACESSO -->
        <div class="dl-section" id="downloads">
            <div class="section-title">
                <i class="fa-solid fa-cloud-arrow-down text-danger"></i> 
                <%= temAcesso ? 'Arquivos de Instalação' : 'Área de Download' %>
            </div>

            <% if (temAcesso) { %>
                <!-- ================= CASO 1: TEM ACESSO (LINKS LIBERADOS) ================= -->
                <div class="dl-grid">
                    <% if (links && links.length > 0) { %>
                        <% links.forEach(link => { %>
                            <a href="<%= link.url %>" target="_blank" class="dl-card">
                                <div class="dl-info">
                                    <span class="dl-sub">Download Seguro</span>
                                    <span class="dl-label"><%= link.label %></span>
                                </div>
                                <div class="dl-icon"><i class="fas fa-download"></i></div>
                            </a>
                        <% }) %>
                    <% } else if (jogo.link_download) { %>
                         <!-- Suporte a link legado único -->
                        <a href="<%= jogo.link_download %>" target="_blank" class="dl-card">
                            <div class="dl-info">
                                <span class="dl-sub">Servidor Principal</span>
                                <span class="dl-label">Download Direto</span>
                            </div>
                            <div class="dl-icon"><i class="fas fa-download"></i></div>
                        </a>
                    <% } else { %>
                        <div class="text-muted p-3">Nenhum link disponível no momento.</div>
                    <% } %>
                </div>

            <% } else if (pedidoPendente) { %>
                <!-- ================= CASO 2: PEDIDO EM ANÁLISE ================= -->
                <div class="status-box" style="border-color: #ffc107;">
                    <i class="fas fa-clock fa-3x text-warning"></i>
                    <h3 class="text-white">Pagamento em Verificação</h3>
                    <p class="text-muted small">Você solicitou este jogo. Aguarde a aprovação do administrador para liberar os links.</p>
                    <a href="https://wa.me/244923456789" target="_blank" class="status-btn btn-outline-warning" style="border: 1px solid #ffc107; color: #ffc107; text-decoration: none;">
                        <i class="fab fa-whatsapp"></i> Enviar Comprovante
                    </a>
                </div>

            <% } else { %>
                <!-- ================= CASO 3: BLOQUEADO (PRECISA COMPRAR) ================= -->
                <div class="status-box" style="border-color: var(--kg-accent);">
                    <i class="fas fa-lock fa-3x text-danger"></i>
                    <h3 class="text-white">Conteúdo Premium</h3>
                    <p class="text-muted small mb-4">Adquira este jogo para liberar o acesso vitalício aos arquivos.</p>
                    
                    <h2 class="fw-bold text-white mb-4">
                        <%= parseFloat(jogo.preco).toLocaleString('pt-AO', {style: 'currency', currency: 'AOA'}) %>
                    </h2>

                    <form action="/game/<%= jogo.id %>/comprar" method="POST">
                        <button type="submit" class="btn-buy status-btn" style="width: auto; padding: 15px 40px;">
                            <i class="fas fa-shopping-cart me-2"></i> COMPRAR AGORA
                        </button>
                    </form>
                </div>
            <% } %>
        </div>

        <!-- REQUISITOS -->
        <div class="req-card">
            <div class="section-title">
                <i class="fa-solid fa-microchip text-danger"></i> Requisitos do Sistema
            </div>
            <div class="req-grid">
                <div class="req-item">
                    <i class="fa-solid fa-gears"></i>
                    <div style="width: 100%;">
                        <strong><%= jogo.requisitos || 'Informação não fornecida pelo desenvolvedor.' %></strong>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- SIDEBAR DESKTOP (Fixa) -->
    <aside class="sidebar">
        <div class="cover-box">
            <img src="/uploads/games/<%= jogo.capa %>" class="cover" alt="Box Art">
            <div class="floating-badges">
                <span class="badge-game"><%= jogo.plataforma %></span>
                <span class="badge-game"><%= jogo.genero %></span>
            </div>
        </div>
        
        <div class="price-container">
            <span class="price-label">Valor Final</span>
            <% if (parseFloat(jogo.preco) > 0) { %>
                <div class="price-value"><%= parseFloat(jogo.preco).toLocaleString('pt-AO') %> <small style="font-size: 1rem; color: #888;">Kz</small></div>
            <% } else { %>
                <div class="price-value price-free">GRÁTIS</div>
            <% } %>
        </div>

        <% if (!temAcesso && !pedidoPendente && parseFloat(jogo.preco) > 0) { %>
            <!-- Botão Comprar Desktop -->
            <form action="/game/<%= jogo.id %>/comprar" method="POST">
                <button type="submit" class="btn-action btn-buy w-100">
                    <i class="fa-solid fa-cart-shopping"></i> COMPRAR AGORA
                </button>
            </form>
        <% } else if (pedidoPendente) { %>
            <!-- Botão Pendente Desktop -->
            <button disabled class="btn-action w-100" style="background: #333; color: #aaa; cursor: wait;">
                <i class="fa-solid fa-clock"></i> AGUARDANDO
            </button>
        <% } else { %>
            <!-- Botão Baixar Desktop -->
            <button onclick="document.getElementById('downloads').scrollIntoView({behavior: 'smooth'})" class="btn-action btn-free w-100">
                <i class="fa-solid fa-download"></i> BAIXAR AGORA
            </button>
        <% } %>
    </aside>
</div>

<!-- BARRA FIXA MOBILE (Sticky Action Bar) -->
<div class="mobile-sticky-bar">
    <div class="mobile-price-group">
        <span class="mpg-label">Total</span>
        <% if (parseFloat(jogo.preco) > 0) { %>
            <span class="mpg-value"><%= parseFloat(jogo.preco).toLocaleString('pt-AO') %> <small>Kz</small></span>
        <% } else { %>
            <span class="mpg-value" style="color: var(--kg-neon);">GRÁTIS</span>
        <% } %>
    </div>
    
    <% if (!temAcesso && !pedidoPendente && parseFloat(jogo.preco) > 0) { %>
        <!-- Mobile Comprar -->
        <form action="/game/<%= jogo.id %>/comprar" method="POST" style="margin: 0;">
            <button type="submit" class="btn-mobile-buy">
                ADQUIRIR <i class="fas fa-chevron-right ms-1"></i>
            </button>
        </form>
    <% } else if (pedidoPendente) { %>
        <!-- Mobile Pendente -->
        <button class="btn-mobile-buy" style="background: #333; color: #aaa;" disabled>
            PENDENTE
        </button>
    <% } else { %>
        <!-- Mobile Baixar -->
        <button onclick="document.getElementById('downloads').scrollIntoView({behavior: 'smooth'})" class="btn-mobile-buy" style="background: var(--kg-neon); color: black;">
            BAIXAR <i class="fas fa-arrow-down ms-1"></i>
        </button>
    <% } %>
</div>

<script>
    // Troca imagem/video na galeria
    function verImagem(src) {
        const main = document.getElementById('mainDisplay');
        main.style.opacity = '0.5';
        
        setTimeout(() => {
            main.innerHTML = `<img src="${src}" style="width:100%; height:100%; object-fit:cover; animation: fadeIn 0.4s;">`;
            main.style.opacity = '1';
        }, 200);
    }
</script>