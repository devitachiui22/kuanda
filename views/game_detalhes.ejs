<!DOCTYPE html>
<html lang="pt-AO">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= jogo.titulo %> | Kuanda Game Studio</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;800&display=swap" rel="stylesheet">
    
    <style>
        /* DESIGN KUANDA DARK THEME */
        :root { --kg-bg: #09090b; --kg-panel: #18181b; --kg-accent: #E31C25; --kg-neon: #00f2ea; --kg-text: #e4e4e7; }
        body { background: var(--kg-bg); color: var(--kg-text); font-family: 'Plus Jakarta Sans', sans-serif; margin: 0; }
        a { text-decoration: none; }
        
        .backdrop {
            position: absolute; width: 100%; height: 500px; z-index: -1;
            mask-image: linear-gradient(to bottom, black 10%, transparent 100%);
        }
        .backdrop img { width: 100%; height: 100%; object-fit: cover; opacity: 0.3; filter: blur(20px); }

        .container { max-width: 1200px; margin: 0 auto; padding: 40px 20px; display: grid; grid-template-columns: 2fr 1fr; gap: 40px; }
        
        .media-box { background: black; aspect-ratio: 16/9; border-radius: 16px; overflow: hidden; border: 1px solid #333; margin-bottom: 20px; }
        .media-box iframe, .media-box img { width: 100%; height: 100%; object-fit: cover; border: none; }
        
        .thumbs { display: flex; gap: 10px; overflow-x: auto; padding-bottom: 10px; }
        .thumb { width: 120px; height: 70px; border-radius: 8px; cursor: pointer; opacity: 0.6; transition: 0.2s; object-fit: cover; border: 2px solid transparent; }
        .thumb:hover { opacity: 1; border-color: var(--kg-neon); }

        /* LISTA DE DOWNLOADS */
        .dl-section { background: var(--kg-panel); padding: 25px; border-radius: 16px; margin-top: 30px; border: 1px solid #333; }
        .dl-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 10px; margin-top: 15px; }
        
        .dl-btn {
            background: #27272a; color: white; padding: 15px; border-radius: 10px;
            display: flex; align-items: center; justify-content: space-between;
            transition: 0.2s; border: 1px solid #333;
        }
        .dl-btn:hover { background: var(--kg-accent); border-color: var(--kg-accent); transform: translateY(-2px); }
        .dl-label { font-weight: 700; display: block; }
        .dl-sub { font-size: 0.75rem; color: #aaa; }
        .dl-btn:hover .dl-sub { color: white; }

        .sidebar { position: sticky; top: 20px; }
        .cover { width: 100%; border-radius: 16px; box-shadow: 0 10px 40px rgba(0,0,0,0.5); }
        .price { font-size: 2.5rem; font-weight: 800; display: block; margin: 20px 0 10px; }
        .btn-action {
            width: 100%; padding: 18px; border-radius: 10px; font-weight: 800; text-transform: uppercase;
            border: none; cursor: pointer; font-size: 1.1rem;
        }
        .btn-buy { background: var(--kg-accent); color: white; }
        .btn-free { background: var(--kg-neon); color: black; }
        
        @media(max-width: 900px) { .container { grid-template-columns: 1fr; } }
    </style>
</head>
<body>

<div class="backdrop">
    <% if (jogo.banner) { %> <img src="/uploads/games/<%= jogo.banner %>"> <% } else { %> <img src="/uploads/games/<%= jogo.capa %>"> <% } %>
</div>

<div class="container">
    <!-- COLUNA ESQUERDA -->
    <div>
        <h1 class="d-lg-none"><%= jogo.titulo %></h1>
        
        <!-- MEDIA PLAYER -->
        <div class="media-box" id="mainDisplay">
            <% 
                let videoId = null;
                if (jogo.trailer_url && (jogo.trailer_url.includes('youtube') || jogo.trailer_url.includes('youtu.be'))) {
                    try {
                        if(jogo.trailer_url.includes('v=')) videoId = jogo.trailer_url.split('v=')[1].split('&')[0];
                        else if(jogo.trailer_url.includes('youtu.be/')) videoId = jogo.trailer_url.split('youtu.be/')[1].split('?')[0];
                    } catch(e) {}
                }
            %>
            <% if (videoId) { %>
                <iframe src="https://www.youtube.com/embed/<%= videoId %>?rel=0" allowfullscreen></iframe>
            <% } else { %>
                <img src="/uploads/games/<%= jogo.capa %>">
            <% } %>
        </div>

        <!-- SCREENSHOTS -->
        <% if (jogo.screenshots && jogo.screenshots.length > 0) { %>
            <div class="thumbs">
                <% jogo.screenshots.forEach(src => { %>
                    <img src="/uploads/games/<%= src %>" class="thumb" onclick="verImagem('/uploads/games/<%= src %>')">
                <% }) %>
            </div>
        <% } %>

        <div style="margin-top: 30px;">
            <h2>Sobre o Jogo</h2>
            <p style="white-space: pre-line; color: #a1a1aa; line-height: 1.7;"><%= jogo.descricao || 'Sem descrição.' %></p>
        </div>

        <!-- AREA DE DOWNLOADS -->
        <% 
            const temLinks = (typeof links !== 'undefined' && links.length > 0);
            const temLegado = (jogo.link_download && jogo.link_download.length > 5);
        %>

        <% if (temLinks || temLegado) { %>
            <div class="dl-section" id="downloads">
                <h3><i class="fas fa-cloud-download-alt text-danger"></i> Downloads Disponíveis</h3>
                <div class="dl-grid">
                    
                    <% if (temLinks) { %>
                        <% links.forEach(link => { %>
                            <a href="<%= link.url %>" target="_blank" class="dl-btn">
                                <div>
                                    <span class="dl-label"><%= link.label %></span>
                                    <span class="dl-sub">Servidor Seguro</span>
                                </div>
                                <i class="fas fa-download"></i>
                            </a>
                        <% }) %>
                    <% } %>

                    <% if (temLegado) { %>
                        <a href="<%= jogo.link_download %>" target="_blank" class="dl-btn">
                            <div>
                                <span class="dl-label">Link Direto</span>
                                <span class="dl-sub">Opção Extra</span>
                            </div>
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    <% } %>

                </div>
            </div>
        <% } else { %>
            <div class="dl-section text-center">
                <p class="text-muted mb-0">Links indisponíveis no momento.</p>
            </div>
        <% } %>

        <div style="background: #18181b; padding: 20px; border-radius: 12px; margin-top: 30px; border: 1px solid #333;">
            <h4>Requisitos de Sistema</h4>
            <p style="color: #888;"><%= jogo.requisitos || 'Consulte o fabricante.' %></p>
        </div>
    </div>

    <!-- COLUNA DIREITA (SIDEBAR) -->
    <div class="sidebar">
        <img src="/uploads/games/<%= jogo.capa %>" class="cover">
        
        <h1 style="font-size: 2rem; margin: 20px 0 10px;"><%= jogo.titulo %></h1>
        <div>
            <span style="background: #333; padding: 5px 10px; border-radius: 6px; font-size: 0.85rem;"><%= jogo.genero %></span>
            <span style="background: #333; padding: 5px 10px; border-radius: 6px; font-size: 0.85rem;"><%= jogo.plataforma %></span>
        </div>

        <% if (parseFloat(jogo.preco) > 0) { %>
            <span class="price"><%= parseFloat(jogo.preco).toLocaleString() %> Kz</span>
            <button onclick="comprar()" class="btn-action btn-buy">COMPRAR AGORA</button>
        <% } else { %>
            <span class="price" style="color: var(--kg-neon);">GRÁTIS</span>
            <button onclick="document.getElementById('downloads').scrollIntoView({behavior: 'smooth'})" class="btn-action btn-free">BAIXAR AGORA</button>
        <% } %>
    </div>
</div>

<script>
    function verImagem(src) {
        document.getElementById('mainDisplay').innerHTML = `<img src="${src}">`;
    }
    function comprar() {
        window.open('https://wa.me/244900000000', '_blank');
    }
</script>

</body>
</html>